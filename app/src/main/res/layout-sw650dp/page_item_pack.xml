<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/item_pack_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="@dimen/subsc_pager_item_padding_horizontal"
    android:layout_marginRight="@dimen/subsc_pager_item_padding_horizontal"
    android:layout_marginHorizontal="@dimen/subsc_pager_item_padding_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.common.TextViewCustomFont
        android:textSize="12.5dip"
        android:textColor="@color/subsc_text_button_color"
        android:id="@id/subscribed"
        android:background="@drawable/subscribed_mark_bg"
        android:padding="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribed"
        android:drawablePadding="4.0dip"
        android:drawableStart="@drawable/subscribed_tick"
        android:layout_marginEnd="20.0dip"
        app:customFont="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@id/pack_icon"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:src="@drawable/pre_pack_icon"
        app:layout_constraintBottom_toTopOf="@id/pack_title"
        app:layout_constraintEnd_toEndOf="@id/pack_title"
        app:layout_constraintStart_toStartOf="@id/pack_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="28.5dip"
        android:textColor="@color/pro_pack_color"
        android:gravity="center"
        android:id="@id/pack_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginRight="12.0dip"
        android:text="@string/premium_package"
        android:layout_marginHorizontal="12.0dip"
        app:customFont="2"
        app:layout_constraintBottom_toTopOf="@id/ll_year_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pack_items"
        app:layout_constraintTop_toBottomOf="@id/pack_icon" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/pack_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32.0dip"
        android:layout_marginRight="32.0dip"
        android:layout_marginHorizontal="32.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pack_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.75dip"
            android:textColor="@color/subsc_text_color"
            android:id="@id/remove_ads"
            android:paddingLeft="8.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:text="@string/remove_all_ads"
            android:drawablePadding="4.0dip"
            android:drawableStart="@drawable/remove_ads_basic"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="4.0dip" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.75dip"
            android:textColor="@color/subsc_text_color"
            android:id="@id/icon_pack"
            android:paddingLeft="8.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:text="@string/icon_pakc_studio_subsc"
            android:drawablePadding="4.0dip"
            android:drawableStart="@drawable/remove_ads_basic"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="4.0dip" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.75dip"
            android:textColor="@color/subsc_text_color"
            android:id="@id/wallpaper"
            android:paddingLeft="8.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:text="@string/premium_wallpapers"
            android:drawablePadding="4.0dip"
            android:drawableStart="@drawable/remove_ads_basic"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="4.0dip" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.75dip"
            android:textColor="@color/subsc_text_color"
            android:id="@id/ai_credit"
            android:background="@drawable/subsc_pack_ai_highlight"
            android:paddingLeft="8.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:text="@string/ai_chat_unlimited_access"
            android:drawablePadding="4.0dip"
            android:drawableStart="@drawable/remove_ads_basic"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="4.0dip" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.75dip"
            android:textColor="@color/subsc_text_color"
            android:id="@id/ai_image_credit"
            android:paddingLeft="8.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:drawablePadding="4.0dip"
            android:drawableStart="@drawable/remove_ads_basic"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="4.0dip" />
    </LinearLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@id/ll_year_button"
        android:background="@drawable/item_pack_year_btn_premium_bg"
        android:paddingLeft="@dimen/item_pack_button_padding_horizontal"
        android:paddingRight="@dimen/item_pack_button_padding_horizontal"
        android:layout_width="0.0dip"
        android:layout_height="60.0dip"
        android:layout_marginTop="16.0dip"
        android:paddingHorizontal="@dimen/item_pack_button_padding_horizontal"
        app:layout_constraintBottom_toTopOf="@id/ll_month_button"
        app:layout_constraintEnd_toEndOf="@id/pack_title"
        app:layout_constraintStart_toStartOf="@id/pack_title"
        app:layout_constraintTop_toBottomOf="@id/pack_title">
        <com.truelib.common.TextViewCustomFont
            android:textSize="12.5dip"
            android:textColor="@color/white"
            android:id="@id/text_free_trail_year"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="@dimen/item_pack_button_text_size"
            android:textColor="@color/subsc_text_button_color"
            android:id="@id/year_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_free_trail_year"
            android:layout_toStartOf="@id/iv_icon_year"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@id/iv_icon_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:src="@drawable/subsc_pack_button_icon"
            android:layout_alignTop="@id/year_button"
            android:layout_alignBottom="@id/text_free_trail_year"
            android:importantForAccessibility="no"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <com.truelib.common.TextViewCustomFont
        android:textSize="9.0dip"
        android:textColor="@color/subsc_premium_color"
        android:gravity="center"
        android:id="@id/sale_percent"
        android:background="@drawable/sale_percent_bg"
        android:paddingLeft="8.0dip"
        android:paddingTop="2.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="2.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved 10%"
        android:layout_marginEnd="10.0dip"
        android:paddingHorizontal="8.0dip"
        android:paddingVertical="2.0dip"
        app:layout_constraintBottom_toTopOf="@id/ll_year_button"
        app:layout_constraintEnd_toEndOf="@id/ll_year_button"
        app:layout_constraintTop_toTopOf="@id/ll_year_button" />
    <RelativeLayout
        android:gravity="center"
        android:id="@id/ll_month_button"
        android:background="@drawable/item_pack_month_btn_premium_bg"
        android:paddingLeft="@dimen/item_pack_button_padding_horizontal"
        android:paddingRight="@dimen/item_pack_button_padding_horizontal"
        android:layout_width="0.0dip"
        android:layout_height="60.0dip"
        android:layout_marginTop="8.0dip"
        android:paddingHorizontal="@dimen/item_pack_button_padding_horizontal"
        app:layout_constraintBottom_toTopOf="@id/auto_renewable"
        app:layout_constraintEnd_toEndOf="@id/pack_title"
        app:layout_constraintStart_toStartOf="@id/pack_title"
        app:layout_constraintTop_toBottomOf="@id/ll_year_button">
        <ImageView
            android:id="@id/iv_icon_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:src="@drawable/item_pack_month_premium_icon_btn"
            android:layout_alignTop="@id/month_button"
            android:layout_alignBottom="@id/text_free_trail_month"
            android:importantForAccessibility="no"
            android:layout_alignParentEnd="true" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="12.5dip"
            android:textColor="#ff000000"
            android:id="@id/text_free_trail_month"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_icon_month"
            android:layout_alignParentStart="true" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="@dimen/item_pack_button_text_size"
            android:textColor="@color/subsc_text_color"
            android:id="@id/month_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_free_trail_month"
            android:layout_toStartOf="@id/iv_icon_month"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@id/current_plan_layout"
        android:background="@drawable/subsc_current_plan_bg"
        android:paddingLeft="@dimen/item_pack_button_padding_horizontal"
        android:paddingRight="@dimen/item_pack_button_padding_horizontal"
        android:visibility="invisible"
        android:layout_width="0.0dip"
        android:layout_height="60.0dip"
        android:layout_marginTop="16.0dip"
        android:paddingHorizontal="@dimen/item_pack_button_padding_horizontal"
        app:layout_constraintEnd_toEndOf="@id/pack_title"
        app:layout_constraintStart_toStartOf="@id/pack_title"
        app:layout_constraintTop_toBottomOf="@id/pack_title">
        <com.truelib.common.TextViewCustomFont
            android:textSize="14.199982dip"
            android:textColor="@color/subsc_sub_text_color"
            android:id="@id/tv_current_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_plan"
            app:customFont="2" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.75dip"
            android:textColor="@color/subsc_sub_text_color"
            android:id="@id/tv_current_plan_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customFont="2" />
    </LinearLayout>
    <com.truelib.common.TextViewCustomFont
        android:textSize="12.5dip"
        android:textColor="@color/subsc_sub_text_color"
        android:gravity="center"
        android:id="@id/auto_renewable"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:text="@string/auto_renewable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/pack_title"
        app:layout_constraintStart_toStartOf="@id/pack_title"
        app:layout_constraintTop_toBottomOf="@id/ll_month_button" />
</androidx.constraintlayout.widget.ConstraintLayout>