<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@id/top_bar"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/icon_pack_top_bar" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/list"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginBottom="16.0dip"
        app:layout_constraintBottom_toTopOf="@id/apply_button"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />
    <ImageView
        android:id="@id/btn_edit"
        android:background="@drawable/theme_ripple_circle_bg"
        android:padding="12.0dip"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:src="@drawable/icon_pack_ic_edit"
        android:layout_marginStart="32.0dip"
        app:layout_constraintBottom_toBottomOf="@id/apply_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/apply_button" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="17.0dip"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/apply_button"
        android:background="@drawable/rounded_button_bg"
        android:paddingLeft="12.0dip"
        android:paddingTop="13.0dip"
        android:paddingRight="12.0dip"
        android:paddingBottom="13.0dip"
        android:focusable="true"
        android:visibility="invisible"
        android:clickable="true"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:text="@string/apply"
        android:backgroundTint="@color/blue_color"
        android:backgroundTintMode="add"
        android:layout_marginHorizontal="16.0dip"
        android:paddingHorizontal="12.0dip"
        android:paddingVertical="13.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_share"
        app:layout_constraintStart_toEndOf="@id/btn_edit"
        app:layout_goneMarginStart="32.0dip" />
    <ImageView
        android:id="@id/btn_share"
        android:background="@drawable/theme_ripple_circle_bg"
        android:padding="12.0dip"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:src="@drawable/ic_share"
        android:layout_marginEnd="32.0dip"
        app:layout_constraintBottom_toBottomOf="@id/apply_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/apply_button" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/success_anim"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="false"
        app:lottie_rawRes="@raw/congratulation" />
    <FrameLayout
        android:id="@id/error_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include
            android:layout_gravity="center_horizontal"
            android:id="@id/progress_item"
            android:layout_width="@dimen/loading_thumb_size"
            android:layout_height="@dimen/loading_thumb_size"
            android:layout_marginTop="30.0dip"
            android:layout_marginBottom="4.0dip"
            layout="@layout/theme_loading_layout" />
        <include
            android:id="@id/no_item_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54.0dip"
            android:layout_marginBottom="200.0dip"
            layout="@layout/layout_no_item_wallpaper" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>