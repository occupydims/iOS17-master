<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="8.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <ImageView
                        android:id="@id/ad_app_icon"
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:adjustViewBounds="true" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5.0dip">
                        <TextView
                            android:textSize="16.0dip"
                            android:textColor="@android:color/black"
                            android:ellipsize="end"
                            android:id="@id/ad_headline"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="10.0dip"
                                android:textStyle="bold"
                                android:textColor="#ff939393"
                                android:gravity="bottom"
                                android:id="@id/ad_advertiser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1" />
                            <TextView
                                android:textSize="10.0dip"
                                android:textStyle="bold"
                                android:textColor="@color/color_ads_mark"
                                android:id="@id/ad_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5.0dip"
                                android:layout_marginRight="5.0dip" />
                            <RatingBar
                                android:id="@id/ad_stars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:isIndicator="true"
                                style="?android:ratingBarStyleSmall" />
                            <TextView
                                android:textSize="10.0dip"
                                android:textColor="@android:color/darker_gray"
                                android:id="@id/ad_store"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5.0dip" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    style="@style/AdsMarkRight" />
            </LinearLayout>
            <TextView
                android:textSize="12.0dip"
                android:textColor="#ff939393"
                android:id="@id/ad_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:maxLines="3" />
            <com.google.android.gms.ads.nativead.MediaView
                android:layout_gravity="center_horizontal"
                android:id="@id/ad_media"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_weight="1.0" />
            <Button
                android:textSize="13.0dip"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:id="@id/ad_call_to_action"
                android:background="@drawable/bg_native_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height_button_native"
                android:layout_margin="8.0dip"
                android:backgroundTint="#ff308c33" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.gms.ads.nativead.NativeAdView>