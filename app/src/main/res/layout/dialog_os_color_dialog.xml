<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_gravity="center"
    android:background="@color/os_switch"
    android:paddingBottom="@dimen/os_color_dialog_container_margin"
    android:layout_width="@dimen/os_color_dialog_container_width"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.settingview.color_dialog.ColorGradientView
        android:id="@id/gradient_color_view"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_margin="@dimen/os_color_dialog_container_margin"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.settingview.color_dialog.ColorHueView
        android:id="@id/hue_color_view"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginHorizontal="8.0dip"
        android:paddingHorizontal="8.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gradient_color_view" />
    <com.truelib.settingview.color_dialog.ColorAlphaView
        android:id="@id/alpha_color_view"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginHorizontal="8.0dip"
        android:paddingHorizontal="8.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hue_color_view" />
    <TextView
        android:textSize="@dimen/os_main_text_size"
        android:textColor="@color/os_main_text_color"
        android:gravity="center_vertical"
        android:id="@id/mode_pick"
        android:background="@drawable/os_mode_background"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/os_color_dialog_text_height"
        android:layout_marginTop="12.0dip"
        android:text="HSL"
        android:drawablePadding="4.0dip"
        android:drawableEnd="@drawable/color_mode_down_icon"
        android:layout_marginStart="@dimen/os_color_dialog_container_margin"
        android:paddingHorizontal="8.0dip"
        app:layout_constraintBottom_toTopOf="@id/palette_colors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alpha_color_view" />
    <EditText
        android:textColor="@color/os_color_dialog_sub_text"
        android:gravity="center"
        android:id="@id/value_1"
        android:background="@null"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/os_color_dialog_text_height"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:layout_marginStart="4.0dip"
        android:layout_marginEnd="0.5dip"
        android:clipToOutline="false"
        app:layout_constraintBottom_toBottomOf="@id/mode_pick"
        app:layout_constraintEnd_toStartOf="@id/value_2"
        app:layout_constraintStart_toEndOf="@id/mode_pick"
        app:layout_constraintTop_toTopOf="@id/mode_pick" />
    <EditText
        android:textColor="@color/os_color_dialog_sub_text"
        android:gravity="center"
        android:id="@id/value_2"
        android:background="@null"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/os_color_dialog_text_height"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:layout_marginStart="0.5dip"
        android:layout_marginEnd="0.5dip"
        android:clipToOutline="false"
        app:layout_constraintBottom_toBottomOf="@id/mode_pick"
        app:layout_constraintEnd_toStartOf="@id/value_3"
        app:layout_constraintStart_toEndOf="@id/value_1"
        app:layout_constraintTop_toTopOf="@id/mode_pick" />
    <EditText
        android:textColor="@color/os_color_dialog_sub_text"
        android:gravity="center"
        android:id="@id/value_3"
        android:background="@null"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/os_color_dialog_text_height"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:layout_marginStart="0.5dip"
        android:layout_marginEnd="0.5dip"
        android:clipToOutline="false"
        app:layout_constraintBottom_toBottomOf="@id/mode_pick"
        app:layout_constraintEnd_toStartOf="@id/value_alpha"
        app:layout_constraintStart_toEndOf="@id/value_2"
        app:layout_constraintTop_toTopOf="@id/mode_pick" />
    <EditText
        android:textColor="@color/os_color_dialog_sub_text"
        android:gravity="center"
        android:id="@id/value_alpha"
        android:background="@null"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/os_color_dialog_text_height"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:layout_marginStart="0.5dip"
        android:layout_marginEnd="@dimen/os_color_dialog_container_margin"
        android:clipToOutline="false"
        app:layout_constraintBottom_toBottomOf="@id/mode_pick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/value_3"
        app:layout_constraintTop_toTopOf="@id/mode_pick" />
    <TextView
        android:textSize="@dimen/os_main_text_size"
        android:textStyle="bold"
        android:textColor="@color/os_main_text_color"
        android:id="@id/palette_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/os_color_dialog_container_margin"
        android:text="@string/palette_color"
        android:layout_marginStart="@dimen/os_color_dialog_container_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_alpha" />
    <GridLayout
        android:id="@id/palette_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/os_color_dialog_container_margin"
        app:layout_constraintTop_toBottomOf="@id/palette_colors" />
    <TextView
        android:textSize="11.0sp"
        android:textColor="@color/os_main_text_color"
        android:gravity="center"
        android:id="@id/tv_cancel"
        android:background="@drawable/os_bg_button_border"
        android:paddingTop="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="@string/cancel"
        android:layout_marginStart="16.0dip"
        android:layout_marginEnd="4.0dip"
        android:paddingVertical="8.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_apply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/palette_grid" />
    <TextView
        android:textSize="11.0sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@id/tv_apply"
        android:background="@drawable/os_bg_button"
        android:paddingTop="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="@string/apply"
        android:layout_marginStart="4.0dip"
        android:layout_marginEnd="@dimen/os_color_dialog_container_margin"
        android:paddingVertical="8.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_cancel"
        app:layout_constraintTop_toBottomOf="@id/palette_grid" />
    <View
        android:id="@id/mode_options_overlay"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/mode_options"
        android:background="@color/os_color_dialog_background"
        android:visibility="gone"
        android:layout_width="89.0dip"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/mode_pick"
        app:layout_constraintEnd_toEndOf="@id/mode_pick"
        app:layout_constraintStart_toStartOf="@id/mode_pick"
        app:layout_constraintTop_toTopOf="@id/mode_pick">
        <TextView
            android:textSize="@dimen/os_main_text_size"
            android:textColor="@color/os_main_text_color"
            android:gravity="center_vertical"
            android:id="@id/mode_rgb"
            android:paddingLeft="14.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="14.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="RGB"
            android:drawablePadding="4.0dip"
            android:paddingHorizontal="14.0dip"
            android:paddingVertical="12.0dip" />
        <TextView
            android:textSize="@dimen/os_main_text_size"
            android:textColor="@color/os_main_text_color"
            android:gravity="center_vertical"
            android:id="@id/mode_hsv"
            android:paddingLeft="14.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="14.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="HSV"
            android:drawablePadding="4.0dip"
            android:paddingHorizontal="14.0dip"
            android:paddingVertical="12.0dip" />
        <TextView
            android:textSize="@dimen/os_main_text_size"
            android:textColor="@color/os_main_text_color"
            android:gravity="center_vertical"
            android:id="@id/mode_hsl"
            android:paddingLeft="14.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="14.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="HSL"
            android:drawablePadding="4.0dip"
            android:drawableEnd="@drawable/os_color_dialog_tick_icon"
            android:paddingHorizontal="14.0dip"
            android:paddingVertical="12.0dip" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>