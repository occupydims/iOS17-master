<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:id="@id/main_content"
        android:background="@drawable/upgrade_dialog_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="20.0dip"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:id="@id/txt_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="39.0dip"
            android:layout_marginRight="16.0dip"
            android:text="@string/what_s_new"
            android:layout_marginHorizontal="16.0dip"
            app:customFont="2"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@id/view_pager"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="24.0dip"
            android:layout_marginBottom="24.0dip"
            android:layout_marginVertical="24.0dip"
            app:layout_constraintBottom_toTopOf="@id/card_continue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_dialog_title" />
        <androidx.cardview.widget.CardView
            android:id="@id/card_continue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16.0dip"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="36.0dip"
            app:cardElevation="16.0dip"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.android.launcher3.settings.custom.TextViewCustomFont
                android:textSize="14.0dip"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:id="@id/btn_continue"
                android:background="@drawable/rounded_button_bg"
                android:padding="14.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/continue_text"
                android:backgroundTint="@color/btn_dialog_upgrade_bg_color"
                android:backgroundTintMode="add" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>