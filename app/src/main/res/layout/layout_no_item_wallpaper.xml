<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingTop="20.0dip"
    android:paddingBottom="50.0dip"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/no_item_image"
        android:layout_width="@dimen/no_item_image_size"
        android:layout_height="@dimen/no_item_image_size"
        android:src="@drawable/wallpaper_no_connect_network"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="16.5dip"
        android:textColor="@color/theme_text_secondary"
        android:gravity="center"
        android:id="@id/no_item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32.0dip"
        android:layout_marginTop="@dimen/no_item_margin"
        android:layout_marginRight="32.0dip"
        android:text="@string/no_connection_network"
        android:layout_marginHorizontal="32.0dip"
        app:layout_constraintTop_toBottomOf="@id/no_item_image" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="17.0dip"
        android:textColor="@color/white"
        android:id="@id/explore_button"
        android:background="@drawable/rounded_button_bg"
        android:paddingLeft="50.0dip"
        android:paddingTop="13.0dip"
        android:paddingRight="50.0dip"
        android:paddingBottom="13.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/no_item_margin"
        android:text="@string/retry"
        android:backgroundTint="@color/theme_color_blue"
        android:backgroundTintMode="add"
        android:paddingHorizontal="50.0dip"
        android:paddingVertical="13.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_item_text" />
</androidx.constraintlayout.widget.ConstraintLayout>