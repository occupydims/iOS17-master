<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingLeft="8.0dip"
    android:paddingRight="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ripple_transparent_background_16"
    android:paddingHorizontal="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@id/imThumb"
        android:background="@drawable/bg_imageview"
        android:layout_width="88.0dip"
        android:layout_height="88.0dip"
        android:layout_marginTop="15.0dip"
        android:layout_marginBottom="15.0dip"
        android:scaleType="centerCrop"
        android:layout_marginVertical="15.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCornerShape" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="14.0dip"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@id/title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:maxLines="2"
        android:layout_marginStart="12.0dip"
        app:customFont="2"
        app:layout_constraintBottom_toTopOf="@id/nameType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imThumb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
    <ImageView
        android:id="@id/imType"
        android:layout_width="12.0dip"
        android:layout_height="12.0dip"
        android:src="@drawable/ic_type_youtube"
        android:layout_marginStart="12.0dip"
        app:layout_constraintBottom_toBottomOf="@id/nameType"
        app:layout_constraintStart_toEndOf="@id/imThumb"
        app:layout_constraintTop_toTopOf="@id/nameType" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="11.0dip"
        android:textColor="@color/app_search_title_secondary"
        android:id="@id/nameType"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginBottom="15.0dip"
        android:layout_marginStart="4.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imType"
        app:layout_constraintTop_toBottomOf="@id/title" />
    <View
        android:id="@id/divider"
        android:background="@color/app_search_divider_color"
        android:layout_width="0.0dip"
        android:layout_height="0.5dip"
        android:layout_marginStart="12.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imThumb" />
</androidx.constraintlayout.widget.ConstraintLayout>