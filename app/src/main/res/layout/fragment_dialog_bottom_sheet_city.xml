<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/bg_clock_bottom_sheet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.common.TextViewCustomFont
        android:textSize="16.0sp"
        android:textColor="@color/white"
        android:id="@id/tv_choose_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin"
        android:text="@string/choose_city"
        app:customFont="2"
        app:layout_constraintEnd_toStartOf="@id/ad_frame_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:id="@id/rl_search"
        android:background="@drawable/bg_search_clock"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingRight="@dimen/medium_margin"
        android:layout_width="0.0dip"
        android:layout_height="36.0dip"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="8.0dip"
        android:paddingHorizontal="@dimen/medium_margin"
        app:layout_constraintEnd_toStartOf="@id/fr_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_city">
        <ImageView
            android:id="@id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_clock"
            android:layout_centerVertical="true"
            android:importantForAccessibility="no" />
        <com.truelib.common.ExtendedEditText
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:textColorHint="@color/clock_sub_text_color"
            android:gravity="center_vertical"
            android:id="@id/edt_search"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="@string/search"
            android:lines="1"
            android:drawablePadding="12.0dip"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textCursorDrawable="@drawable/clock_cursor"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toEndOf="@id/iv_search"
            app:clearIcon="@drawable/ic_clear_search_bottom_sheet" />
    </RelativeLayout>
    <FrameLayout
        android:id="@id/fr_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_margin"
        app:layout_constraintBottom_toBottomOf="@id/rl_search"
        app:layout_constraintEnd_toStartOf="@id/ad_frame_right"
        app:layout_constraintTop_toTopOf="@id/rl_search">
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/clock_selected_color"
            android:layout_gravity="center"
            android:id="@id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textAlignment="center" />
    </FrameLayout>
    <com.truelib.common.TextViewCustomFont
        android:textSize="16.0sp"
        android:textColor="@color/clock_unselected_color"
        android:id="@id/tv_title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginStart="@dimen/activity_margin"
        app:customFont="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_search" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/rv_city"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:paddingHorizontal="@dimen/activity_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/ad_frame"
        app:layout_constraintEnd_toStartOf="@id/ad_frame_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />
    <FrameLayout
        android:id="@id/ad_frame"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginBottom="12.0dip"
        android:layout_marginHorizontal="12.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <FrameLayout
        android:id="@id/ad_frame_right"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginBottom="12.0dip"
        android:layout_marginHorizontal="12.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/white"
        android:id="@id/tv_result_empty"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_result_found"
        app:layout_constraintBottom_toTopOf="@id/ad_frame"
        app:layout_constraintEnd_toStartOf="@id/ad_frame_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>