<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingLeft="16.0dip"
    android:paddingRight="16.0dip"
    android:paddingBottom="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/picker_wrap"
        android:paddingTop="16.0dip"
        android:paddingBottom="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16.0dip"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@id/wheel_highlight"
            android:background="@drawable/wheel_highlight_bg"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/clock_wheel_item_height"
            app:layout_constraintBottom_toBottomOf="@id/wv_hour"
            app:layout_constraintEnd_toEndOf="@id/wv_sec"
            app:layout_constraintStart_toStartOf="@id/wv_hour"
            app:layout_constraintTop_toTopOf="@id/wv_hour" />
        <com.truelib.common.view.wheel.Wheel3DView
            android:id="@id/wv_hour"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/wv_min"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:wheelEntries="@array/hours"
            style="@style/DatePickerStyle" />
        <com.truelib.common.view.wheel.Wheel3DView
            android:id="@id/wv_min"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:wheelEntries="@array/minute_second"
            style="@style/DatePickerStyle" />
        <com.truelib.common.view.wheel.Wheel3DView
            android:id="@id/wv_sec"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/wv_min"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:wheelEntries="@array/minute_second"
            style="@style/DatePickerStyle" />
        <com.truelib.common.TextViewCustomFont
            android:textColor="@color/white"
            android:id="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hours"
            app:layout_constraintEnd_toEndOf="@id/wv_hour"
            app:layout_constraintStart_toStartOf="@id/wv_hour"
            app:layout_constraintTop_toBottomOf="@id/wv_hour" />
        <com.truelib.common.TextViewCustomFont
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/min"
            app:layout_constraintEnd_toEndOf="@id/wv_min"
            app:layout_constraintStart_toStartOf="@id/wv_min"
            app:layout_constraintTop_toBottomOf="@id/wv_min" />
        <com.truelib.common.TextViewCustomFont
            android:textColor="@color/white"
            android:id="@id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sec"
            app:layout_constraintEnd_toEndOf="@id/wv_sec"
            app:layout_constraintStart_toStartOf="@id/wv_sec"
            app:layout_constraintTop_toBottomOf="@id/wv_sec" />
        <com.truelib.common.TextViewCustomFont
            android:enabled="false"
            android:textSize="15.0dip"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:id="@id/btn_cancel"
            android:background="@drawable/gray_selector_circle_bg"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_marginTop="22.0dip"
            android:text="@string/cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wv_hour" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="15.0dip"
            android:textColor="@color/clock_start_text_color"
            android:gravity="center"
            android:id="@id/btn_start"
            android:background="@drawable/circle_bg"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_marginTop="22.0dip"
            android:text="@string/start"
            android:backgroundTint="@color/clock_start_bg_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wv_sec" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@id/timer_config"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/picker_wrap"
        layout="@layout/timer_config_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>