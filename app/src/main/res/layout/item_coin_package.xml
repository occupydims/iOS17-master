<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16.0dip"
    android:layout_marginTop="8.0dip"
    android:layout_marginRight="16.0dip"
    android:layout_marginHorizontal="16.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_item_coin_package"
        android:paddingLeft="8.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8.0dip"
        android:paddingVertical="10.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/ic_coin"
            android:background="@drawable/bg_item_coin"
            android:padding="4.0dip"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/price"
            app:layout_constraintStart_toEndOf="@id/ic_coin"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.truelib.common.TextViewCustomFont
                    android:textSize="18.5dip"
                    android:textColor="@color/theme_color_orange"
                    android:id="@id/name_coin_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAlignment="viewStart"
                    android:paddingEnd="6.0dip"
                    app:customFont="2" />
                <com.truelib.common.TextViewCustomFont
                    android:textSize="13.0dip"
                    android:textColor="@color/theme_neutrals_white"
                    android:id="@id/discount_percent"
                    android:background="@drawable/bg_discount_purchase"
                    android:paddingLeft="8.0dip"
                    android:paddingTop="4.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingBottom="4.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:drawablePadding="3.0dip"
                    android:drawableEnd="@drawable/ic_arrow_up"
                    android:textAlignment="viewStart"
                    android:paddingStart="6.0dip"
                    android:paddingEnd="4.0dip"
                    android:paddingHorizontal="8.0dip"
                    android:paddingVertical="4.0dip"
                    app:customFont="2" />
            </LinearLayout>
            <com.truelib.common.TextViewCustomFont
                android:textSize="14.0dip"
                android:textColor="@color/theme_text_secondary"
                android:id="@id/discount_coin"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                app:customFont="2" />
        </LinearLayout>
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/theme_neutrals_white"
            android:gravity="center"
            android:id="@id/price"
            android:background="@drawable/bg_price_coin_package"
            android:paddingLeft="14.0dip"
            android:paddingTop="8.0dip"
            android:paddingRight="14.0dip"
            android:paddingBottom="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:drawablePadding="4.0dip"
            android:paddingHorizontal="14.0dip"
            android:paddingVertical="8.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@id/ic_hot"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_theme_hot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>