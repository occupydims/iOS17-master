<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher3.views.GlassFrameLayout
    android:id="@id/container"
    android:paddingBottom="40.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.launcher3.views.TopRoundedCornerView
        android:id="@id/spring_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <View
            android:id="@id/top_bar"
            android:background="@drawable/bottom_sheet_bar"
            android:layout_width="36.0dip"
            android:layout_height="@dimen/top_bar_height"
            android:layout_marginTop="12.0dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/app_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:layout_below="@id/top_bar">
            <com.android.launcher3.BubbleTextView
                android:layout_gravity="center_vertical"
                android:id="@id/icon"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@id/app_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.android.launcher3.settings.custom.TextViewCustomFont
                    android:textSize="13.0dip"
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:layout_gravity="bottom|center"
                    android:id="@id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.0dip"
                    android:layout_marginRight="1.0dip"
                    android:maxLines="1"
                    android:layout_marginHorizontal="1.0dip" />
                <ImageView
                    android:layout_gravity="start|center|top"
                    android:id="@id/app_delete"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_light" />
                <ImageView
                    android:layout_gravity="start|center|top"
                    android:id="@id/app_select"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/unselected_icon" />
                <TextView
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="end|center|top"
                    android:id="@id/app_badge"
                    android:background="@drawable/ic_badge_one"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.android.launcher3.BubbleTextView>
            <com.android.launcher3.settings.custom.TextViewCustomFont
                android:textSize="18.0dip"
                android:textColor="@color/widget_app_label"
                android:layout_gravity="center_vertical"
                android:id="@id/txt_app_name"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:customFont="2" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@id/ic_clear"
                android:background="@drawable/ic_clear_bg"
                android:padding="8.0dip"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/ic_clear_bottom_sheet"
                android:contentDescription="@string/mainly_clear" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@id/widgets_list_view"
            android:clipToPadding="false"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="24.0dip"
            android:layout_above="@id/add_widget_container"
            android:layout_below="@id/app_info" />
        <com.android.launcher3.views.GlassLinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/add_widget_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:src="@drawable/add_widget_icon"
                android:contentDescription="@string/add_widget"
                android:layout_marginEnd="4.0dip" />
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/add_widget"
                android:paddingTop="18.0dip"
                android:paddingBottom="18.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_widget"
                android:paddingVertical="18.0dip" />
        </com.android.launcher3.views.GlassLinearLayout>
    </com.android.launcher3.views.TopRoundedCornerView>
</com.android.launcher3.views.GlassFrameLayout>