<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/container"
        android:background="@drawable/bg_clock_settings"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/icon"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:src="@drawable/clock_sample"
            android:contentDescription="@string/clock"
            app:layout_constraintBottom_toBottomOf="@id/sub_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="17.0dip"
            android:textColor="@color/white"
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/world_clock"
            android:layout_marginStart="15.0dip"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="12.0dip"
            android:textColor="#99ebebf5"
            android:id="@id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clock"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="12.0dip"
            android:textColor="#99ebebf5"
            android:id="@id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:text="@string/world_clock_desc"
            app:layout_constraintTop_toBottomOf="@id/sub_title" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="12.0dip"
            android:textColor="#99ebebf5"
            android:id="@id/cities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32.0dip"
            android:text="@string/cities"
            android:textAllCaps="true"
            android:layout_marginStart="16.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/recycler_view"
            android:background="@drawable/bg_clock_list_settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cities" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>