<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="24.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="24.0dip"
        android:layout_marginHorizontal="16.0dip"
        android:layout_marginVertical="24.0dip"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="20.0dip"
        app:cardElevation="0.0dip"
        app:layout_constraintBottom_toTopOf="@id/switch_group"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/img_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY" />
        <ImageView
            android:layout_gravity="center"
            android:id="@id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="18.0dip" />
    </androidx.cardview.widget.CardView>
    <android.widget.TextView
        android:textSize="24.0dip"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_marginHorizontal="16.0dip"
        app:customFont="2"
        app:layout_constraintBottom_toBottomOf="parent" />
    <android.widget.TextView
        android:textSize="16.0dip"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:id="@id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginHorizontal="16.0dip"
        app:layout_constraintBottom_toTopOf="@id/title" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/switch_group"
        android:background="@drawable/dialog_upgrade_group_background_radius_16"
        android:paddingLeft="16.0dip"
        android:paddingTop="14.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="14.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:layout_marginHorizontal="16.0dip"
        android:paddingHorizontal="16.0dip"
        android:paddingVertical="14.0dip"
        app:layout_constraintBottom_toTopOf="@id/description">
        <android.widget.TextView
            android:textSize="14.0dip"
            android:textColor="@color/text_primary"
            android:ellipsize="end"
            android:id="@id/switch_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_weight="1.0"
            android:layout_marginEnd="@dimen/small_margin" />
        <android.widget.Switch
            android:id="@id/switch_button"
            android:duplicateParentState="true"
            android:layout_width="@dimen/width_switch_view"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>