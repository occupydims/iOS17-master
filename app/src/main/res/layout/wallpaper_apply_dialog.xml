<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog_radius_large"
    android:paddingBottom="20.0dip"
    android:layout_height="wrap_content"
    style="@style/width_match_parent_max_492"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/image_content"
        android:layout_width="150.0dip"
        android:layout_height="150.0dip"
        android:layout_marginTop="29.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="18.5dip"
        android:textColor="@color/theme_text_primary"
        android:gravity="center"
        android:id="@id/txt_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="30.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginHorizontal="16.0dip"
        app:customFont="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_content" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="16.75dip"
        android:textColor="@color/theme_text_secondary"
        android:gravity="center"
        android:id="@id/txt_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginHorizontal="16.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/btn_watch_ad"
        android:background="@drawable/rounded_button_bg"
        android:paddingLeft="24.0dip"
        android:paddingTop="13.0dip"
        android:paddingRight="24.0dip"
        android:paddingBottom="13.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="30.0dip"
        android:layout_marginRight="16.0dip"
        android:backgroundTint="@color/green_color"
        android:backgroundTintMode="add"
        android:layout_marginHorizontal="16.0dip"
        android:paddingHorizontal="24.0dip"
        android:paddingVertical="13.0dip"
        app:layout_constraintTop_toBottomOf="@id/txt_description">
        <com.truelib.common.TextViewCustomFont
            android:textSize="17.0dip"
            android:textColor="@color/white"
            android:id="@id/txt_watch_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8.0dip"
            android:drawableStart="@drawable/ic_watch_ad" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/btn_join_pro"
        android:background="@drawable/rounded_button_join_pro_bg"
        android:paddingLeft="24.0dip"
        android:paddingTop="13.0dip"
        android:paddingRight="24.0dip"
        android:paddingBottom="13.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginHorizontal="16.0dip"
        android:paddingHorizontal="24.0dip"
        android:paddingVertical="13.0dip"
        app:layout_constraintTop_toBottomOf="@id/btn_watch_ad"
        app:layout_goneMarginTop="30.0dip">
        <com.truelib.common.TextViewCustomFont
            android:textSize="17.0dip"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_pro"
            android:drawablePadding="8.0dip"
            android:drawableStart="@drawable/ic_crown_wallpaper" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>