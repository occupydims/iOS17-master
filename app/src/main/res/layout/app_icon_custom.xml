<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher3.BubbleTextView
    android:orientation="vertical"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_gravity="center"
        android:id="@id/app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.android.launcher3.settings.custom.TextViewCustomFont
        android:textSize="13.0dip"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:layout_gravity="bottom|center"
        android:id="@id/app_title"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1.0dip"
        android:layout_marginRight="1.0dip"
        android:maxLines="1"
        android:layout_marginHorizontal="1.0dip"
        android:paddingHorizontal="4.0dip" />
    <ImageView
        android:layout_gravity="start|center|top"
        android:id="@id/app_delete"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_light" />
    <ImageView
        android:layout_gravity="start|center|top"
        android:id="@id/app_select"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/unselected_icon" />
    <TextView
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_gravity="end|center|top"
        android:id="@id/app_badge"
        android:background="@drawable/ic_badge_one"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.android.launcher3.BubbleTextView>