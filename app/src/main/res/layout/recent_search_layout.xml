<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.common.TextViewCustomFont
        android:textSize="14.199982dip"
        android:textColor="@color/theme_text_primary"
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="12.0dip"
        android:text="@string/recent_search"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginHorizontal="16.0dip"
        android:layout_marginVertical="12.0dip" />
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@id/recycler_view"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12.0dip"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</LinearLayout>