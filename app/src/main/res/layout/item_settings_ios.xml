        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginStart="16.0dip"
        app:layout_constraintBottom_toBottomOf="@id/checkbox" />
</androidx.constraintlayout.widget.ConstraintLayout>