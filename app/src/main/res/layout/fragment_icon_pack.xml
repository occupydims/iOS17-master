<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/theme_background_semi_transparent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@id/icon_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout" />
    <com.google.android.material.tabs.TabLayout
        android:id="@id/tab_layout"
        android:background="@color/theme_background_semi_transparent"
        android:paddingLeft="16.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="6.0dip"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16.0dip"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="center"
        app:tabMode="scrollable"
        app:tabPaddingEnd="4.0dip"
        app:tabPaddingStart="4.0dip"
        app:tabRippleColor="@null" />
    <androidx.cardview.widget.CardView
        android:id="@id/btn_new_pack"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip"
        android:layout_marginEnd="16.0dip"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="16.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:background="@drawable/customize_new_icon_bg"
            android:padding="17.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_pack_ic_new_custom_pack" />
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:id="@id/error_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include
            android:layout_gravity="center_horizontal"
            android:id="@id/progress_item"
            android:layout_width="@dimen/loading_thumb_size"
            android:layout_height="@dimen/loading_thumb_size"
            android:layout_marginTop="30.0dip"
            android:layout_marginBottom="4.0dip"
            layout="@layout/theme_loading_layout" />
        <include
            android:id="@id/no_item_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54.0dip"
            android:layout_marginBottom="200.0dip"
            layout="@layout/layout_no_item_wallpaper" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>