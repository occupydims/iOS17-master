<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher3.folder.Folder
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto">
    <com.android.launcher3.ExtendedEditText
        android:textSize="@dimen/folder_label_text_size"
        android:textColor="#ffffffff"
        android:textColorHint="#ffc1c1c1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@id/folder_name"
        android:background="@android:color/transparent"
        android:paddingLeft="12.0dip"
        android:paddingTop="@dimen/folder_label_padding_top"
        android:paddingRight="12.0dip"
        android:paddingBottom="@dimen/folder_label_padding_top"
        android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/folder_hint_text"
        android:singleLine="true"
        android:imeOptions="flagNoExtractUi"
        android:paddingHorizontal="12.0dip"
        android:paddingVertical="@dimen/folder_label_padding_top" />
    <FrameLayout
        android:id="@id/real_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.android.launcher3.views.GlassBlurWallpaperView
            android:id="@id/glass_blur"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <com.android.launcher3.folder.FolderPagedView
                android:id="@id/folder_content"
                android:paddingLeft="8.0dip"
                android:paddingTop="16.0dip"
                android:paddingRight="8.0dip"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                launcher:pageIndicator="@id/folder_page_indicator" />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/folder_footer"
                android:paddingLeft="12.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="12.0dip"
                android:paddingBottom="5.0dip"
                android:clipChildren="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5.0dip">
                <com.android.launcher3.pageindicators.PageIndicatorDots
                    android:layout_gravity="center_vertical"
                    android:id="@id/folder_page_indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</com.android.launcher3.folder.Folder>