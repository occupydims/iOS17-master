<?xml version="1.0" encoding="utf-8"?>
<com.truelib.settings.custom.SafeNestedScrollView
    android:background="@color/new_background"
    android:paddingBottom="48.0dip"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/layout_settings_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/go_to_launcher"
            android:background="@drawable/new_background_item_group_setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="16.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8dp"
                app:layout_constraintBottom_toTopOf="@id/explore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.truelib.common.TextViewCustomFont
                    android:textSize="20.0dip"
                    android:textColor="@color/color_content_1st"
                    android:id="@id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    app:customFont="2"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.truelib.common.TextViewCustomFont
                    android:textColor="@color/color_content_2nd"
                    android:id="@id/description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_description"
                    app:customFont="0"
                    app:layout_constraintTop_toBottomOf="@id/title" />
                <com.truelib.common.TextViewCustomFont
                    android:textSize="13.0dip"
                    android:textColor="@color/blue_color"
                    android:id="@id/app_version"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:customFont="0"
                    app:layout_constraintTop_toBottomOf="@id/description" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.truelib.common.TextViewCustomFont
                android:textSize="14.0dip"
                android:textColor="@color/blue_color"
                android:gravity="center"
                android:id="@id/explore"
                android:background="@drawable/bg_search_settings"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_16dp"
                android:text="@string/go_to_home_screen"
                android:drawableEnd="@drawable/ic_explore_right"
                android:drawableTint="@color/blue_color"
                app:customFont="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:id="@id/set_default_launcher_warning"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_marginVertical="@dimen/margin_8dp"
            layout="@layout/layout_set_default_launcher_warning" />
        <FrameLayout
            android:id="@id/native_ad_frame"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingTop="@dimen/small_margin"
            android:paddingRight="@dimen/medium_margin"
            android:paddingBottom="@dimen/small_margin"
            android:clipToPadding="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/medium_margin"
            android:paddingVertical="@dimen/small_margin" />
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/content_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginRight="@dimen/dp24"
            android:text="@string/features"
            android:layout_marginHorizontal="@dimen/dp24"
            app:customFont="2" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/cross_banner_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_marginVertical="@dimen/small_margin">
            <com.truelib.cross.views.CrossView
                android:id="@id/cross_banner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:textColor="@color/color_content_1st" />
        </LinearLayout>
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/content_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginRight="@dimen/dp24"
            android:text="@string/setting"
            android:layout_marginHorizontal="@dimen/dp24"
            app:customFont="2" />
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/new_background_item_group_setting"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_marginVertical="@dimen/small_margin">
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/general_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_general"
                app:settingText="@string/general" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/appearance_setting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_appearance"
                app:settingText="@string/appearance" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/page_grid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_green_grid"
                app:settingText="@string/screen_grid" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/weather_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_weather"
                app:settingText="@string/weather" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/hidden_apps_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_hidden"
                app:settingText="@string/hidden_apps" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/app_library_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_library"
                app:settingText="@string/app_library" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/change_app_icon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_icon"
                app:settingText="@string/change_app_icon" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/change_app_name_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_label"
                app:settingText="@string/change_app_name" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/wallpaper_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_wallpaper_settings"
                app:settingText="@string/wallpaper" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/themes_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_themes"
                app:settingText="@string/theme" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/page_transition"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_transition"
                app:settingText="@string/workspace_transition_effect" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/app_animation_settings"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_app_animation_settings"
                app:settingText="@string/app_animation" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/badge_notifications_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_badge"
                app:settingText="@string/badge_notifications" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/glass_concept"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_glassmorphism"
                app:settingText="@string/glassmorphism" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/language_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_language"
                app:settingText="@string/language" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/set_default_home_screen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:hideDivider="true"
                app:settingIcon="@drawable/ic_setting_default"
                app:settingText="@string/select_default_home_screen" />
        </LinearLayout>
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/content_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginRight="@dimen/dp24"
            android:text="@string/about_us"
            android:layout_marginHorizontal="@dimen/dp24"
            app:customFont="2" />
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_marginVertical="@dimen/small_margin"
            app:cardCornerRadius="@dimen/radius_item_settings">
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/force_reload_settings"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:hideDivider="true"
                app:settingIcon="@drawable/ic_force_reload_settings"
                app:settingText="@string/force_reload" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/new_background_item_group_setting"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/item_settings_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/item_settings_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_marginVertical="@dimen/item_settings_margin">
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/rate_app"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_rate"
                app:settingText="@string/rate_app" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/download_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:settingIcon="@drawable/ic_setting_download"
                app:settingText="@string/download_other_app" />
            <com.truelib.settings.custom.SettingsItem
                android:id="@id/privacy_policy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:hideDivider="true"
                app:settingIcon="@drawable/ic_setting_policy"
                app:settingText="@string/privacy_policy" />
        </LinearLayout>
    </LinearLayout>
</com.truelib.settings.custom.SafeNestedScrollView>