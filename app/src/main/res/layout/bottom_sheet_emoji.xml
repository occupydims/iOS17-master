<?xml version="1.0" encoding="utf-8"?>
<com.truelib.common.blur.OneShotBlurConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:blur_color="@color/color_blur_filter"
    app:blur_cornerRadius="36.0dip"
    style="@style/width_match_parent_max_492"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="15.0dip"
        android:id="@id/emoji_count"
        android:background="@drawable/background_emoji_count"
        android:paddingLeft="8.0dip"
        android:paddingTop="4.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:paddingHorizontal="8.0dip"
        android:paddingVertical="4.0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/emoji_text" />
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="@dimen/emoji_text_size"
        android:gravity="center"
        android:id="@id/emoji_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        app:customFont="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@id/close_button"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:src="@drawable/close_emoji"
        android:contentDescription="@string/close"
        android:layout_marginEnd="16.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/emoji_text" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/emoji_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        app:layout_constraintTop_toBottomOf="@id/emoji_text" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/category_container"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16.0dip"
        app:layout_constraintBottom_toBottomOf="@id/delete_button"
        app:layout_constraintEnd_toStartOf="@id/delete_button"
        app:layout_constraintStart_toStartOf="@id/emoji_count"
        app:layout_constraintTop_toTopOf="@id/delete_button" />
    <ImageView
        android:id="@id/delete_button"
        android:layout_width="22.0dip"
        android:layout_height="22.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginBottom="16.0dip"
        android:src="@drawable/delete_emoji"
        android:tint="@color/color_container_invert_2nd"
        android:contentDescription="@string/delete"
        android:layout_marginEnd="16.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emoji_list" />
</com.truelib.common.blur.OneShotBlurConstraintLayout>