<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@color/start_custom_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/content_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.truelib.common.TextViewCustomFont
            android:textSize="14.0sp"
            android:textColor="@color/color_text_os_launcher"
            android:ellipsize="end"
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:maxLines="1"
            android:lines="1"
            android:includeFontPadding="false"
            android:inputType="textCapWords"
            android:layout_marginStart="16.0dip"
            app:customFont="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="12.0dip"
            android:textColor="#ff007aff"
            android:id="@id/skip"
            android:background="@drawable/glass_button_bg"
            android:padding="12.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_100"
            android:text="@string/skip"
            android:includeFontPadding="false"
            android:layout_marginEnd="16.0dip"
            app:customFont="2"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" />
        <FrameLayout
            android:id="@id/action_container"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="16.0dip"
            app:layout_constraintBottom_toTopOf="@id/next_button"
            app:layout_constraintTop_toBottomOf="@id/title" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/next_button"
            android:background="@drawable/bg_continue_start_page"
            android:padding="14.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginBottom="30.0dip"
            android:text="@string/app_continue"
            android:layout_marginHorizontal="16.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/width_match_parent_max_524" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@id/loading_view"
        android:background="#4d000000"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@id/progress_item"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginBottom="4.0dip"
            android:src="@drawable/ic_ios_spinner_white" />
    </FrameLayout>
</FrameLayout>