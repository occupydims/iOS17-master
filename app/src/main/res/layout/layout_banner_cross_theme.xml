<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/theme_background_semi_transparent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@id/rv_category"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent" />
        <com.truelib.themes.icon_studio.view.indicator.IndicatorStepCustom
            android:id="@id/dots_indicator"
            android:background="@drawable/bg_dot"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip"
            android:layout_marginStart="20.0dip"
            app:colorActive="@color/colorStepActive"
            app:colorInActive="@color/colorStepInactive"
            app:layout_constraintBottom_toBottomOf="@id/rv_category"
            app:layout_constraintStart_toStartOf="@id/rv_category"
            app:layout_constraintVertical_bias="0.25" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>