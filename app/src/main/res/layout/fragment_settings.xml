<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/main_container"
    android:background="@color/new_background"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/top_bar"
        android:background="@drawable/new_background_item_group_setting"
        android:padding="@dimen/margin_16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="parent">
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/color_content_1st"
            android:ellipsize="end"
            android:gravity="start|center"
            android:id="@id/action_bar_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/premium_description"
            android:layout_weight="1.0"
            android:layout_marginEnd="@dimen/medium_margin"
            app:customFont="2" />
        <ImageView
            android:id="@id/action_pro"
            android:background="@drawable/squircle_bg"
            android:padding="5.0dip"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:tint="@color/orange_yellow"
            app:srcCompat="@drawable/ic_plus_support" />
    </LinearLayout>
    <include
        android:id="@id/layout_content_settings"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginVertical="@dimen/medium_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        layout="@layout/layout_content_setting_ios" />
</androidx.constraintlayout.widget.ConstraintLayout>