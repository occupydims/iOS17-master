<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/bg_clock_bottom_sheet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        app:layout_constraintTop_toTopOf="parent">
        <com.truelib.common.TextViewCustomFont
            android:textSize="17.0dip"
            android:textColor="@color/clock_main_text_color"
            android:gravity="center"
            android:id="@id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65.0dip"
            android:layout_marginRight="65.0dip"
            android:text="@string/timer"
            android:layout_marginHorizontal="65.0dip"
            app:customFont="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="17.0dip"
            android:textColor="@color/clock_selected_color"
            android:id="@id/cancel_button"
            android:paddingLeft="16.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:paddingHorizontal="16.0dip"
            android:paddingVertical="10.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="17.0dip"
            android:textColor="@color/clock_selected_color"
            android:id="@id/start_button"
            android:paddingLeft="16.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:paddingHorizontal="16.0dip"
            android:paddingVertical="10.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:background="@color/clock_divider_color"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divider_height"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/list"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginBottom="8.0dip"
        app:layout_constraintBottom_toTopOf="@id/ad_frame"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />
    <FrameLayout
        android:id="@id/ad_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginBottom="12.0dip"
        android:layout_marginHorizontal="12.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>