<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/bg_clock_bottom_sheet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginBottom="8.0dip"
        app:layout_constraintBottom_toTopOf="@id/ad_frame"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.truelib.common.TextViewCustomFont
                android:textSize="17.0dip"
                android:textColor="@color/clock_main_text_color"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/label"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65.0dip"
                android:layout_marginTop="14.0dip"
                android:layout_marginRight="65.0dip"
                android:text="@string/edit_alarm"
                android:layout_marginHorizontal="65.0dip"
                android:paddingVertical="10.0dip"
                app:customFont="2"
                app:layout_constraintTop_toTopOf="parent" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="17.0dip"
                android:textColor="@color/clock_selected_color"
                android:id="@id/cancel_button"
                android:paddingLeft="16.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="16.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:paddingHorizontal="16.0dip"
                android:paddingVertical="10.0dip"
                app:layout_constraintBottom_toBottomOf="@id/label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/label" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="17.0dip"
                android:textColor="@color/clock_selected_color"
                android:layout_gravity="end"
                android:id="@id/save_button"
                android:paddingLeft="16.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="16.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:paddingHorizontal="16.0dip"
                android:paddingVertical="10.0dip"
                app:layout_constraintBottom_toBottomOf="@id/label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/label" />
            <View
                android:background="@color/clock_divider_color"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_height"
                app:layout_constraintTop_toBottomOf="@id/label" />
            <View
                android:id="@id/wheel_highlight"
                android:background="@drawable/wheel_highlight_bg"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/clock_wheel_item_height"
                android:layout_marginLeft="16.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginHorizontal="16.0dip"
                app:layout_constraintBottom_toBottomOf="@id/wv_hour"
                app:layout_constraintTop_toTopOf="@id/wv_hour" />
            <com.truelib.common.view.wheel.Wheel3DView
                android:id="@id/wv_hour"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/wv_min"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label"
                app:layout_constraintWidth_percent="0.3333"
                app:wheelCyclic="true"
                app:wheelEntries="@array/hours_alarm"
                style="@style/DatePickerStyle" />
            <com.truelib.common.view.wheel.Wheel3DView
                android:id="@id/wv_min"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/wv_hour"
                app:layout_constraintTop_toBottomOf="@id/label"
                app:layout_constraintWidth_percent="0.3333"
                app:wheelCyclic="true"
                app:wheelEntries="@array/minute_second_alarm"
                style="@style/DatePickerStyle" />
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/option_container"
                android:background="@drawable/clock_option_container_bg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="16.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginHorizontal="16.0dip"
                app:layout_constraintTop_toBottomOf="@id/wv_hour">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@id/option_repeat"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="16.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:paddingHorizontal="16.0dip">
                    <com.truelib.common.TextViewCustomFont
                        android:textSize="17.0dip"
                        android:textColor="@color/clock_main_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repeat" />
                    <com.truelib.common.TextViewCustomFont
                        android:textSize="17.0dip"
                        android:textColor="@color/clock_sub_text_color"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:id="@id/repeat_name"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12.0dip"
                        android:layout_marginRight="12.0dip"
                        android:text="@string/clock_label"
                        android:maxLines="1"
                        android:layout_weight="1.0"
                        android:layout_marginHorizontal="12.0dip" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clock_next_icon" />
                </LinearLayout>
                <View
                    android:background="@color/option_divider_color"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divider_height_big"
                    android:layout_marginStart="16.0dip" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@id/option_label"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="16.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:paddingHorizontal="16.0dip">
                    <com.truelib.common.TextViewCustomFont
                        android:textSize="17.0dip"
                        android:textColor="@color/clock_main_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label" />
                    <com.truelib.common.ExtendedEditText
                        android:textSize="17.0dip"
                        android:textColor="@color/clock_sub_text_color"
                        android:textColorHint="@color/clock_hint_text_color"
                        android:gravity="end|center"
                        android:id="@id/label_text"
                        android:background="@color/transparent_bg"
                        android:focusableInTouchMode="true"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:hint="@string/alarm"
                        android:maxLines="1"
                        android:lines="1"
                        android:drawablePadding="12.0dip"
                        android:layout_weight="1.0"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:textCursorDrawable="@drawable/clock_cursor"
                        android:layout_marginStart="12.0dip"
                        app:clearIcon="@drawable/ic_clear_search_bottom_sheet" />
                </LinearLayout>
                <View
                    android:background="@color/option_divider_color"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divider_height_big"
                    android:layout_marginStart="16.0dip" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@id/option_sound"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="16.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:paddingHorizontal="16.0dip">
                    <com.truelib.common.TextViewCustomFont
                        android:textSize="17.0dip"
                        android:textColor="@color/clock_main_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound" />
                    <com.truelib.common.TextViewCustomFont
                        android:textSize="17.0dip"
                        android:textColor="@color/clock_sub_text_color"
                        android:ellipsize="end"
                        android:gravity="end|center"
                        android:id="@id/sound_name"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12.0dip"
                        android:layout_marginRight="12.0dip"
                        android:text="@string/clock_label"
                        android:lines="1"
                        android:layout_weight="1.0"
                        android:layout_marginHorizontal="12.0dip" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clock_next_icon" />
                </LinearLayout>
                <View
                    android:background="@color/option_divider_color"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/divider_height_big"
                    android:layout_marginStart="16.0dip" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@id/option_snooze"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="16.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:paddingHorizontal="16.0dip">
                    <com.truelib.common.TextViewCustomFont
                        android:textSize="17.0dip"
                        android:textColor="@color/clock_main_text_color"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/snooze"
                        android:layout_weight="1.0" />
                    <com.truelib.common.view.IOSSwitchView
                        android:id="@id/enable_snooze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <com.truelib.common.TextViewCustomFont
                android:textSize="17.0dip"
                android:textColor="@color/red_color"
                android:gravity="center"
                android:id="@id/delete_button"
                android:background="@drawable/clock_option_container_bg"
                android:paddingTop="14.0dip"
                android:paddingBottom="14.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16.0dip"
                android:text="@string/delete_alarm"
                android:paddingVertical="14.0dip"
                app:layout_constraintTop_toBottomOf="@id/option_container" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <FrameLayout
        android:id="@id/ad_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginBottom="12.0dip"
        android:layout_marginHorizontal="12.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>