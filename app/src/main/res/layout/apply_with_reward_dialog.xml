<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:paddingBottom="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_dialog_radius_large"
        android:paddingBottom="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/img_cat"
            android:layout_width="180.0dip"
            android:layout_height="180.0dip"
            android:layout_marginTop="2.0dip"
            android:src="@drawable/watch_reward_cat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="17.0dip"
            android:textStyle="bold"
            android:textColor="@color/icon_pack_text"
            android:gravity="center"
            android:id="@id/dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="16.0dip"
            android:text="@string/watch_an_ad_to_apply"
            android:layout_marginHorizontal="16.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_cat" />
        <TextView
            android:textSize="13.0dip"
            android:textColor="@color/icon_pack_text"
            android:gravity="center"
            android:id="@id/dialog_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:text="@string/watch_a_video_reward_content"
            android:layout_marginHorizontal="16.0dip"
            app:layout_constraintTop_toBottomOf="@id/dialog_title" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/watch_reward"
            android:background="@drawable/rounded_button_bg"
            android:paddingTop="14.0dip"
            android:paddingBottom="14.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="16.0dip"
            android:backgroundTint="@color/blue_color"
            android:backgroundTintMode="add"
            android:layout_marginHorizontal="16.0dip"
            android:paddingVertical="14.0dip"
            app:layout_constraintTop_toBottomOf="@id/dialog_content">
            <ImageView
                android:id="@id/img_reward"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:src="@drawable/ic_reward_box"
                android:layout_marginEnd="4.0dip" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="16.75dip"
                android:textColor="@color/icon_pack_button_text"
                android:id="@id/text_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/watch_video_ad"
                app:customFont="2" />
        </LinearLayout>
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.75dip"
            android:textColor="@color/icon_pack_button_color"
            android:gravity="center"
            android:id="@id/cancel"
            android:background="@drawable/rounded_button_bg"
            android:paddingTop="14.0dip"
            android:paddingBottom="14.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="16.0dip"
            android:text="@string/cancel"
            android:layout_marginHorizontal="16.0dip"
            android:paddingVertical="14.0dip"
            app:customFont="2"
            app:layout_constraintTop_toBottomOf="@id/watch_reward" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>