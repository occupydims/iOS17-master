<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingLeft="8.0dip"
    android:paddingRight="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ripple_transparent_background_16"
    android:paddingHorizontal="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.launcher3.BubbleTextView
        android:orientation="vertical"
        android:id="@id/app_bubble"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dip"
        android:layout_marginBottom="14.0dip"
        android:layout_centerVertical="true"
        android:layout_marginVertical="14.0dip">
        <ImageView
            android:layout_gravity="center"
            android:id="@id/app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:layout_gravity="bottom|center"
            android:id="@id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1.0dip"
            android:layout_marginRight="1.0dip"
            android:maxLines="1"
            android:layout_marginHorizontal="1.0dip" />
        <ImageView
            android:layout_gravity="start|center|top"
            android:id="@id/app_delete"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_light" />
        <ImageView
            android:layout_gravity="start|center|top"
            android:id="@id/app_select"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unselected_icon" />
        <TextView
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="end|center|top"
            android:id="@id/app_badge"
            android:background="@drawable/ic_badge_one"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.android.launcher3.BubbleTextView>
    <com.android.launcher3.settings.custom.TextViewCustomFont
        android:textSize="16.0dip"
        android:textColor="#ffffffff"
        android:ellipsize="end"
        android:id="@id/txt_app_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        android:layout_centerVertical="true"
        android:layout_marginStart="12.0dip"
        android:layout_toStartOf="@id/btn_location"
        android:layout_toEndOf="@id/app_bubble"
        app:customFont="2" />
    <ImageView
        android:id="@id/btn_location"
        android:padding="6.0dip"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:foreground="@drawable/ripple_circle_border_bg"
        android:src="@drawable/ic_app_location"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
    <View
        android:id="@id/divider"
        android:background="@color/app_search_divider_color"
        android:layout_width="wrap_content"
        android:layout_height="0.5dip"
        android:layout_below="@id/app_bubble"
        android:layout_marginStart="12.0dip"
        android:layout_toEndOf="@id/app_bubble"
        android:layout_alignParentEnd="true" />
</RelativeLayout>