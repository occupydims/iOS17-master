<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/uninstall_intro_fragment"
    android:background="@color/optimize_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="16.0dip"
            android:textStyle="bold"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@id/action_bar_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove_app"
            android:layout_marginStart="24.0dip"
            app:customFont="2"
            app:layout_constraintBottom_toBottomOf="@id/action_back"
            app:layout_constraintStart_toEndOf="@id/action_back"
            app:layout_constraintTop_toTopOf="@id/action_back" />
        <ImageView
            android:id="@id/action_back"
            android:padding="8.0dip"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_margin="@dimen/margin_16dp"
            android:src="@drawable/ic_close_payment_ai"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@id/intro_content"
        layout="@layout/uninstall_content" />
</LinearLayout>