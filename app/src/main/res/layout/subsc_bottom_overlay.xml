<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_gravity="bottom|center"
    android:background="@drawable/item_pack_bg_radius_top"
    android:layout_height="wrap_content"
    style="@style/width_match_parent_max_524"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/item_1"
            android:background="@drawable/item_pack_subsc_bg_state"
            android:paddingLeft="@dimen/item_pack_button_padding_horizontal"
            android:paddingRight="@dimen/item_pack_button_padding_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_marginLeft="32.0dip"
            android:layout_marginTop="32.0dip"
            android:layout_marginRight="32.0dip"
            android:layout_marginHorizontal="32.0dip"
            android:paddingHorizontal="@dimen/item_pack_button_padding_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.truelib.common.TextViewCustomFont
                android:textSize="18.5sp"
                android:textColor="@color/pro_main_text"
                android:id="@id/txt_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monthly"
                app:customFont="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:gravity="end"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_name_1"
                app:layout_constraintTop_toTopOf="parent">
                <com.truelib.common.TextViewCustomFont
                    android:textSize="12.5sp"
                    android:textColor="@color/pro_main_text"
                    android:gravity="end"
                    android:id="@id/txt_trial_1"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="end|center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <com.truelib.common.TextViewCustomFont
                        android:textSize="14.199982sp"
                        android:textColor="@color/pro_sub_text"
                        android:gravity="end"
                        android:id="@id/txt_original_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8.0dip" />
                    <com.truelib.common.TextViewCustomFont
                        android:textSize="16.75sp"
                        android:textColor="@color/pro_main_text"
                        android:gravity="end"
                        android:id="@id/txt_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:customFont="2" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.truelib.common.TextViewCustomFont
            android:textSize="11.0sp"
            android:textColor="@color/subsc_premium_color"
            android:gravity="center"
            android:id="@id/sale_percent_1"
            android:background="@drawable/sale_percent_pre_bg"
            android:paddingLeft="8.0dip"
            android:paddingTop="2.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.0dip"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="2.0dip"
            app:layout_constraintBottom_toTopOf="@id/item_1"
            app:layout_constraintEnd_toEndOf="@id/item_1"
            app:layout_constraintTop_toTopOf="@id/item_1" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/item_2"
            android:background="@drawable/item_pack_subsc_bg_state"
            android:paddingLeft="@dimen/item_pack_button_padding_horizontal"
            android:paddingRight="@dimen/item_pack_button_padding_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_marginLeft="32.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_marginRight="32.0dip"
            android:layout_marginHorizontal="32.0dip"
            android:paddingHorizontal="@dimen/item_pack_button_padding_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_1">
            <com.truelib.common.TextViewCustomFont
                android:textSize="18.5sp"
                android:textColor="@color/pro_main_text"
                android:id="@id/txt_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weekly"
                app:customFont="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:gravity="end"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_name_2"
                app:layout_constraintTop_toTopOf="parent">
                <com.truelib.common.TextViewCustomFont
                    android:textSize="12.5sp"
                    android:textColor="@color/pro_main_text"
                    android:gravity="end"
                    android:id="@id/txt_trial_2"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="end|center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <com.truelib.common.TextViewCustomFont
                        android:textSize="14.199982sp"
                        android:textColor="@color/pro_sub_text"
                        android:gravity="end"
                        android:id="@id/txt_original_price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8.0dip" />
                    <com.truelib.common.TextViewCustomFont
                        android:textSize="16.75sp"
                        android:textColor="@color/pro_main_text"
                        android:gravity="end"
                        android:id="@id/txt_price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:customFont="2" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.75sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/btn_continue"
            android:background="@drawable/item_pack_year_btn_premium_bg_round"
            android:padding="14.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_marginRight="32.0dip"
            android:text="@string/continue_text"
            android:layout_marginHorizontal="32.0dip"
            app:layout_constraintTop_toBottomOf="@id/item_2" />
        <FrameLayout
            android:id="@id/txt_pack_description_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginRight="32.0dip"
            android:layout_marginHorizontal="32.0dip"
            app:layout_constraintTop_toBottomOf="@id/btn_continue">
            <com.truelib.common.TextViewCustomFont
                android:textSize="12.5sp"
                android:textColor="@color/subsc_sub_text_color"
                android:gravity="center"
                android:id="@id/txt_pack_description"
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/auto_renew_description" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="12.5sp"
                android:textColor="@color/subsc_sub_text_color"
                android:gravity="center"
                android:id="@id/txt_pack_description_with_trial"
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/auto_renew_description_with_trial" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="12.5sp"
                android:textColor="@color/subsc_sub_text_color"
                android:gravity="center"
                android:id="@id/txt_pack_description_with_sale"
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="12.5sp"
                android:textColor="@color/subsc_sub_text_color"
                android:gravity="center"
                android:id="@id/txt_pack_description_with_trial_and_sale"
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <com.truelib.common.TextViewCustomFont
            android:textSize="11.0sp"
            android:textColor="@color/subsc_premium_color"
            android:gravity="center"
            android:id="@id/sale_percent_2"
            android:background="@drawable/sale_percent_pre_bg"
            android:paddingLeft="8.0dip"
            android:paddingTop="2.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.0dip"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="2.0dip"
            app:layout_constraintBottom_toTopOf="@id/item_2"
            app:layout_constraintEnd_toEndOf="@id/item_2"
            app:layout_constraintTop_toTopOf="@id/item_2" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/subsc_content_padding_horizontal"
            android:layout_marginTop="16.0dip"
            android:layout_marginRight="@dimen/subsc_content_padding_horizontal"
            android:layout_marginBottom="16.0dip"
            android:layout_marginHorizontal="@dimen/subsc_content_padding_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_pack_description_container">
            <com.truelib.common.TextViewCustomFont
                android:textSize="12.0sp"
                android:textColor="@color/ios_button_color"
                android:id="@id/text_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy"
                android:layout_marginEnd="8.0dip" />
            <View
                android:id="@id/divider_privacy"
                android:background="@color/subsc_sub_text_color"
                android:layout_width="1.0dip"
                android:layout_height="14.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_restore"
                app:layout_constraintStart_toEndOf="@id/text_privacy"
                app:layout_constraintTop_toTopOf="parent" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="12.0sp"
                android:textColor="@color/ios_button_color"
                android:id="@id/text_restore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restore_purchase"
                android:layout_marginStart="8.0dip" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/ll_view_retry"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="@id/content"
        app:layout_constraintTop_toTopOf="@id/content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_error_payment"
            android:importantForAccessibility="no" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="14.0sp"
            android:textColor="@color/subsc_sub_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:text="@string/error_payment"
            android:textAlignment="center" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="12.0sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@id/done_button"
            android:background="@drawable/bg_retry"
            android:paddingLeft="16.0dip"
            android:paddingTop="8.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="8.0dip"
            android:layout_width="230.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:text="@string/retry"
            android:paddingHorizontal="16.0dip"
            android:paddingVertical="8.0dip" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>