                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip">
                <TextView
                    android:textSize="12.5dip"
                    android:textColor="#993c3c43"
                    android:id="@id/ad_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@id/ad_star_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ad_ic_start"
                    android:layout_marginStart="3.169983dip" />
                <TextView
                    android:layout_marginStart="4.6999817dip"
                    style="@style/AdsMaInline" />
            </LinearLayout>
            <TextView
                android:textSize="14.0dip"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:id="@id/ad_call_to_action"
                android:background="@drawable/bg_native_button"
                android:paddingLeft="16.0dip"
                android:paddingTop="4.0dip"
                android:paddingRight="16.0dip"
                android:paddingBottom="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:backgroundTint="#ff03855d"
                android:paddingHorizontal="16.0dip"
                android:paddingVertical="4.0dip" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>