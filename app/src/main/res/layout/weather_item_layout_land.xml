<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:background="@color/gray"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textSize="16.0dip"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:id="@id/daily_week"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="Mon"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2" />
    <ImageView
        android:id="@id/daily_weather_state"
        android:layout_width="26.0dip"
        android:layout_height="26.0dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@id/daily_clouds_percent"
        app:layout_constraintEnd_toStartOf="@id/daily_temp_min_max"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/daily_week"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textSize="11.0dip"
        android:textColor="@color/white"
        android:id="@id/daily_clouds_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        app:customFont="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/daily_temp_min_max"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/daily_week"
        app:layout_constraintTop_toBottomOf="@id/daily_weather_state" />
    <com.android.launcher3.feature.weather.view.RangeSeekBar
        android:id="@id/daily_temp_min_max"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.55" />
</androidx.constraintlayout.widget.ConstraintLayout>