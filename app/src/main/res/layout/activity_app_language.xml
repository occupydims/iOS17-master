<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/root"
    android:background="@color/start_custom_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/main_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.truelib.common.TextViewCustomFont
            android:textSize="18.0dip"
            android:textColor="@color/color_text_os_launcher"
            android:ellipsize="end"
            android:gravity="start|center"
            android:id="@id/label"
            android:padding="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_margin_language"
            android:layout_marginTop="@dimen/top_margin_language"
            android:layout_marginRight="@dimen/top_margin_language"
            android:text="@string/language"
            android:lines="1"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="@dimen/top_margin_language"
            app:customFont="2"
            app:layout_constraintEnd_toStartOf="@id/btn_continue_2"
            app:layout_constraintStart_toStartOf="@id/list"
            app:layout_constraintTop_toTopOf="parent" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="12.0dip"
            android:textColor="@color/color_text_os_launcher"
            android:gravity="center"
            android:id="@id/btn_continue_2"
            android:background="@drawable/glass_button_bg"
            android:padding="9.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin_language"
            android:foreground="@drawable/ripple_100"
            android:text="@string/done"
            android:includeFontPadding="false"
            android:layout_marginEnd="@dimen/top_margin_language"
            app:customFont="2"
            app:layout_constraintEnd_toEndOf="@id/list"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/list"
            android:paddingTop="8.0dip"
            android:paddingBottom="8.0dip"
            android:clipToPadding="false"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_marginBottom="8.0dip"
            android:paddingVertical="8.0dip"
            app:layout_constraintBottom_toTopOf="@id/btn_continue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.75dip"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/btn_continue"
            android:background="@drawable/bg_continue_start_page"
            android:paddingTop="14.0dip"
            android:paddingBottom="14.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginBottom="16.0dip"
            android:text="@string/continue_text"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="16.0dip"
            android:paddingVertical="14.0dip"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <View
            android:id="@id/divider"
            android:background="@color/onboarding_divider_background"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/onboarding_divider_height"
            app:layout_constraintBottom_toTopOf="@id/ads_frame" />
        <FrameLayout
            android:id="@id/ads_frame"
            android:background="@color/white"
            android:paddingLeft="@dimen/onboarding_native_padding_horizontal"
            android:paddingRight="@dimen/onboarding_native_padding_horizontal"
            android:clipToPadding="false"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:paddingHorizontal="@dimen/onboarding_native_padding_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@id/loading_view"
        android:background="#4d000000"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@id/progress_item"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginBottom="4.0dip"
            android:src="@drawable/ic_ios_spinner_white" />
    </FrameLayout>
</FrameLayout>