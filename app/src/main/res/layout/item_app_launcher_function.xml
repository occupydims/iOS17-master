<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_8dp"
    android:layout_marginRight="@dimen/margin_8dp"
    android:layout_marginHorizontal="@dimen/margin_8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@id/card_app_icon"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_margin="8.0dip"
        android:elevation="0.0dip"
        app:cardCornerRadius="16.0dip"
        app:cardElevation="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/app_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/img_remove_ads"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="16.0dip"
        android:textColor="@color/color_content_1st"
        android:id="@id/app_name"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        app:customFont="2"
        app:layout_constraintBottom_toTopOf="@id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_app_icon"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="12.0dip"
        android:textColor="@color/content_3rd"
        android:ellipsize="end"
        android:id="@id/description"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginStart="@dimen/margin_8dp"
        app:customFont="0"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="@id/app_name"
        app:layout_constraintStart_toEndOf="@id/card_app_icon"
        app:layout_constraintTop_toBottomOf="@id/app_name" />
    <View
        android:id="@id/divider"
        android:background="@color/new_color_divider"
        android:layout_width="0.0dip"
        android:layout_height="1.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/description" />
</androidx.constraintlayout.widget.ConstraintLayout>