        android:id="@id/color_hex"
        android:background="@color/red"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_margin="2.0dip"
        android:elevation="0.0dip"
        app:cardBackgroundColor="@color/red"
