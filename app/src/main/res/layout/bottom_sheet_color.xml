        android:id="@id/seekbar"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.0dip"
        android:maxHeight="14.0dip"
        android:max="254"
        android:minHeight="14.0dip"
        android:splitTrack="false"
        android:min="100"
