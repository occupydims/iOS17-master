<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14.0dip"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:ellipsize="end"
            android:id="@id/ad_headline"
            android:paddingTop="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:maxLines="1"
            android:paddingStart="92.0dip"
            android:paddingEnd="@dimen/all_app_native_padding_small"
            app:layout_constraintBottom_toBottomOf="@id/ad_mark"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="12.0dip"
            android:textColor="#ff666666"
            android:ellipsize="end"
            android:id="@id/ad_body"
            android:paddingTop="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:maxLines="2"
            android:paddingStart="92.0dip"
            android:paddingEnd="@dimen/ad_body_padding_end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_headline" />
        <androidx.cardview.widget.CardView
            android:id="@id/icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:layout_marginStart="16.0dip"
            app:cardCornerRadius="12.0dip"
            app:cardElevation="0.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@id/ad_app_icon"
                android:layout_width="68.0dip"
                android:layout_height="68.0dip" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="14.0dip"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:id="@id/ad_headline_temp"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:maxLines="1"
            android:layout_marginStart="8.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="8.0dip"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:gravity="center"
            android:id="@id/ad_mark"
            android:background="@drawable/ad_mark_background"
            android:layout_width="27.0dip"
            android:layout_height="14.0dip"
            android:layout_marginTop="2.0dip"
            android:text="Ad"
            app:layout_constraintStart_toStartOf="@id/ad_headline_temp"
            app:layout_constraintTop_toBottomOf="@id/ad_headline_temp" />
        <RatingBar
            android:id="@id/ad_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:layout_marginStart="4.0dip"
            app:layout_constraintBottom_toBottomOf="@id/ad_mark"
            app:layout_constraintStart_toEndOf="@id/ad_mark"
            app:layout_constraintTop_toTopOf="@id/ad_mark"
            style="?android:ratingBarStyleSmall" />
        <TextView
            android:textSize="12.0dip"
            android:textColor="#ff666666"
            android:ellipsize="end"
            android:id="@id/ad_body_temp"
            android:visibility="invisible"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:layout_marginBottom="16.0dip"
            android:text="Test description \n line 2"
            android:maxLines="2"
            android:layout_marginEnd="@dimen/all_app_native_padding_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ad_call_to_action"
            app:layout_constraintStart_toStartOf="@id/ad_headline_temp"
            app:layout_constraintTop_toBottomOf="@id/ad_mark" />
        <Button
            android:textSize="12.0dip"
            android:textColor="#ffffffff"
            android:id="@id/ad_call_to_action"
            android:background="@drawable/bg_native_button"
            android:paddingLeft="12.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="12.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:maxWidth="@dimen/ad_buttom_max_width"
            android:minWidth="0.0dip"
            android:minHeight="0.0dip"
            android:layout_marginEnd="@dimen/all_app_native_padding_small"
            android:backgroundTint="#ff007aff"
            android:paddingHorizontal="12.0dip"
            android:paddingVertical="10.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_headline_temp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.gms.ads.nativead.NativeAdView>