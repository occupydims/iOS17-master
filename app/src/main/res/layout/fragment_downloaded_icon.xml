<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/icon_list"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="@dimen/icon_pack_padding_bottom"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:paddingHorizontal="8.0dip"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:spanCount="2" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/selection_bottom_bar"
        android:background="@color/icon_pack_bg_color"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:translationY="@dimen/bottom_bar_height"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:background="@color/icon_pack_divider_color"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divider_height"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="16.0dip"
            android:textColor="@color/icon_pack_button_color"
            android:ellipsize="end"
            android:id="@id/unselected_button"
            android:padding="9.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:text="@string/unselect"
            android:maxLines="1"
            android:layout_marginHorizontal="8.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/selection_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="16.0dip"
            android:textStyle="bold"
            android:textColor="@color/icon_pack_text"
            android:ellipsize="end"
            android:id="@id/selection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_item"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@id/delete_button"
            android:paddingLeft="16.0dip"
            android:paddingTop="2.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="49.0dip"
            android:layout_height="26.0dip"
            android:src="@drawable/trash"
            android:paddingHorizontal="16.0dip"
            android:paddingVertical="2.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@id/btn_new_pack"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_bar_height"
        android:layout_marginEnd="16.0dip"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="16.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:background="@drawable/customize_new_icon_bg"
            android:padding="17.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_pack_ic_new_custom_pack" />
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:id="@id/error_container"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include
            android:layout_gravity="center_horizontal"
            android:id="@id/progress_item"
            android:layout_width="@dimen/loading_thumb_size"
            android:layout_height="@dimen/loading_thumb_size"
            android:layout_marginTop="30.0dip"
            android:layout_marginBottom="4.0dip"
            layout="@layout/theme_loading_layout" />
        <include
            android:id="@id/no_item_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54.0dip"
            android:layout_marginBottom="200.0dip"
            layout="@layout/layout_no_item_wallpaper" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>