<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/new_background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="16.0dip"
        android:textStyle="bold"
        android:textColor="@color/color_content_1st"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@id/action_bar_title"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:layout_marginBottom="4.0dip"
        android:text="@string/general"
        android:layout_marginVertical="4.0dip"
        android:paddingVertical="10.0dip"
        app:customFont="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <include
        android:id="@id/action_backs"
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:layout_marginStart="16.0dip"
        app:layout_constraintBottom_toBottomOf="@id/action_bar_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/action_bar_title"
        layout="@layout/button_back" />
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="17.0dip"
        android:textColor="@color/blue_color"
        android:id="@id/action_invisible"
        android:visibility="invisible"
        android:clickable="false"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/action_back"
        android:drawablePadding="@dimen/small_margin"
        android:drawableStart="@drawable/ic_back_press"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>