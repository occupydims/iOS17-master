<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:focusable="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@id/wallpaper_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="12.0dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/confirm_button"
            android:background="@drawable/bg_wallpaper_add"
            android:paddingLeft="8.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:minWidth="60.0dip"
            android:text="@string/add"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="4.0dip"
            app:customFont="2"
            app:layout_constraintRight_toRightOf="@id/widget_container"
            app:layout_constraintTop_toTopOf="parent" />
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="12.0dip"
            android:textColor="@color/color_content_1st"
            android:gravity="center"
            android:id="@id/cancel_button"
            android:background="@drawable/bg_border_dialog"
            android:paddingLeft="8.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:minWidth="60.0dip"
            android:text="@string/cancel_state"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="4.0dip"
            app:customFont="2"
            app:layout_constraintLeft_toLeftOf="@id/widget_container"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/icon_lock"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_marginTop="38.0dip"
            android:src="@drawable/ic_lock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_button" />
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="@dimen/default_date_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@id/date"
            android:padding="3.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="6.0dip"
            android:layout_marginHorizontal="6.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_lock"
            app:layout_constraintWidth_percent="0.9"
            app:layout_goneMarginTop="48.0dip" />
        <com.truelib.settings.wallpaper.view.ClockTextView
            android:textSize="@dimen/default_clock_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@id/timing"
            android:padding="5.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_marginTop="@dimen/time_margin_top"
            android:layout_marginRight="6.0dip"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="6.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintWidth_percent="0.9" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/widget_container"
            android:visibility="visible"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_marginTop="@dimen/time_margin_top"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timing"
            app:layout_constraintWidth_percent="0.9" />
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="13.0dip"
            android:textColor="#ccf2f2f2"
            android:id="@id/empty_widget"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_widget"
            android:drawablePadding="3.0dip"
            android:textAllCaps="true"
            android:drawableStart="@drawable/plus_circle_fill"
            app:customFont="2"
            app:layout_constraintBottom_toBottomOf="@id/widget_container"
            app:layout_constraintEnd_toEndOf="@id/widget_container"
            app:layout_constraintStart_toStartOf="@id/widget_container"
            app:layout_constraintTop_toTopOf="@id/widget_container" />
        <ImageView
            android:id="@id/choose_image"
            android:padding="12.0dip"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_marginBottom="14.0dip"
            android:src="@drawable/ic_select_images"
            android:contentDescription="@string/image"
            android:layout_marginStart="32.0dip"
            app:layout_constraintBottom_toTopOf="@id/banner_ad_frame"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white" />
        <com.truelib.settings.wallpaper.view.PagerIndicatorView
            android:id="@id/indicator"
            android:background="@drawable/wallpaper_indicator_bg"
            android:paddingLeft="14.0dip"
            android:paddingTop="8.0dip"
            android:paddingRight="14.0dip"
            android:paddingBottom="8.0dip"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="14.0dip"
            app:layout_constraintBottom_toBottomOf="@id/choose_image"
            app:layout_constraintEnd_toStartOf="@id/options"
            app:layout_constraintStart_toEndOf="@id/choose_image"
            app:layout_constraintTop_toTopOf="@id/choose_image" />
        <ImageView
            android:id="@id/options"
            android:padding="9.0dip"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:contentDescription="@string/options"
            android:layout_marginEnd="32.0dip"
            app:layout_constraintBottom_toBottomOf="@id/choose_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/choose_image" />
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="15.0dip"
            android:textColor="@color/white"
            android:id="@id/wallpaper_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            app:layout_constraintBottom_toTopOf="@id/indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <FrameLayout
            android:id="@id/banner_ad_frame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>