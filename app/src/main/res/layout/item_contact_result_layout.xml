<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingLeft="8.0dip"
    android:paddingRight="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ripple_transparent_background_16"
    android:paddingHorizontal="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layout_item_contact"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/avatar"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginTop="14.0dip"
            android:layout_marginBottom="14.0dip"
            android:layout_marginVertical="14.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:id="@id/contact_name"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:maxLines="1"
            android:layout_marginHorizontal="12.0dip"
            app:customFont="2"
            app:layout_constraintBottom_toTopOf="@id/phone_number"
            app:layout_constraintEnd_toStartOf="@id/sms"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="12.0dip"
            android:textColor="@color/app_search_title_secondary"
            android:ellipsize="end"
            android:id="@id/phone_number"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:maxLines="1"
            android:layout_marginHorizontal="12.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sms"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/contact_name" />
        <ImageView
            android:id="@id/sms"
            android:background="@drawable/circle_border_stroke_bg"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:foreground="@drawable/ripple_circle_border_bg"
            android:src="@drawable/ic_btn_message"
            android:layout_marginStart="8.0dip"
            android:layout_marginEnd="8.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/call"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@id/call"
            android:background="@drawable/circle_border_stroke_bg"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:foreground="@drawable/ripple_circle_border_bg"
            android:src="@drawable/ic_btn_call"
            android:layout_marginStart="8.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@id/divider"
            android:background="@color/app_search_divider_color"
            android:layout_width="0.0dip"
            android:layout_height="0.5dip"
            android:layout_marginStart="12.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/layout_grant_per_contact"
        android:paddingTop="14.0dip"
        android:paddingBottom="14.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="14.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/ic_gallery_per"
            android:background="@color/app_search_dim_color"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:src="@drawable/ic_avatar_contact"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="14.0dip"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@id/des"
            android:paddingLeft="14.0dip"
            android:paddingRight="14.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/text_contacts_grant_permission"
            android:maxLines="2"
            android:paddingHorizontal="14.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ic_action"
            app:layout_constraintStart_toEndOf="@id/ic_gallery_per"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@id/ic_action"
            android:background="@drawable/circle_border_stroke_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_circle_border_bg"
            android:src="@drawable/ic_action_grant_per"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>