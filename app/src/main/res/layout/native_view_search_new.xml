<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    android:id="@id/ad_container"
    android:padding="@dimen/all_app_native_padding_small"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/ad_constraint_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@id/ad_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8.0dip"
            app:cardElevation="0.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@id/ad_app_icon"
                android:layout_width="38.0dip"
                android:layout_height="38.0dip" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="15.0dip"
            android:ellipsize="end"
            android:id="@id/ad_headline"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="@dimen/all_apps_native_content_margin"
            android:layout_marginEnd="@dimen/all_apps_native_content_margin"
            app:layout_constraintEnd_toStartOf="@id/ad_call_to_action"
            app:layout_constraintStart_toEndOf="@id/ad_image"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="8.0dip"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:gravity="center"
            android:id="@id/ad_ic"
            android:background="@drawable/ad_mark_background"
            android:layout_width="27.0dip"
            android:layout_height="14.0dip"
            android:text="Ad"
            android:layout_marginStart="@dimen/all_apps_native_content_margin"
            app:layout_constraintBottom_toBottomOf="@id/ad_body"
            app:layout_constraintStart_toEndOf="@id/ad_image"
            app:layout_constraintTop_toTopOf="@id/ad_body" />
        <TextView
            android:textSize="12.0dip"
            android:ellipsize="end"
            android:id="@id/ad_body"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:maxLines="1"
            android:layout_marginStart="6.0dip"
            android:layout_marginEnd="@dimen/all_apps_native_content_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ad_call_to_action"
            app:layout_constraintStart_toEndOf="@id/ad_ic"
            app:layout_constraintTop_toBottomOf="@id/ad_headline" />
        <Button
            android:textSize="12.0dip"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@id/ad_call_to_action"
            android:background="@drawable/bg_native_search_action_button"
            android:padding="4.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:maxWidth="@dimen/ad_buttom_max_width"
            android:paddingHorizontal="8.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.gms.ads.nativead.NativeAdView>