<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.common.TextViewCustomFont
        android:textSize="18.5dip"
        android:textColor="@color/theme_text_primary"
        android:id="@id/sort"
        android:paddingLeft="12.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="12.0dip"
        android:paddingBottom="8.0dip"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_transparent_background"
        android:drawablePadding="11.0dip"
        android:drawableEnd="@drawable/ic_arrow_drop_down"
        android:paddingHorizontal="12.0dip"
        android:paddingVertical="8.0dip"
        app:customFont="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recycler_view"
        android:paddingTop="8.0dip"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sort" />
    <ScrollView
        android:id="@id/error_scroll"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sort">
        <FrameLayout
            android:layout_gravity="center"
            android:id="@id/no_item_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <include
                android:layout_gravity="center"
                android:id="@id/progress_item"
                android:layout_width="@dimen/loading_thumb_size"
                android:layout_height="@dimen/loading_thumb_size"
                layout="@layout/theme_loading_layout" />
            <include
                android:id="@id/no_item_view"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_no_item_wallpaper" />
        </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>