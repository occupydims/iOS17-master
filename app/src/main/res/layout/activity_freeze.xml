<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="#62000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog_40"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36.0dip"
        android:layout_marginRight="36.0dip"
        android:layout_marginHorizontal="36.0dip"
        style="@style/width_match_parent_max_492">
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="18.0dip"
            android:textColor="@color/theme_text_primary"
            android:gravity="center"
            android:id="@id/title"
            android:padding="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/freeze_issue"
            android:drawablePadding="8.0dip"
            android:drawableStart="@drawable/fingerprint_dialog_error"
            app:customFont="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@id/divider_title"
            android:background="@color/common_divider_color"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/theme_text_primary"
            android:gravity="center"
            android:id="@id/description"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/freeze_description"
            android:lineHeight="25.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_title" />
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textColor="@color/theme_color_blue"
            android:gravity="center"
            android:id="@id/btn_cancel"
            android:background="@drawable/ripple_transparent_background"
            android:padding="16.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_description"
            app:layout_constraintWidth_percent="0.5" />
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textColor="@color/theme_color_blue"
            android:gravity="center"
            android:id="@id/btn_repair"
            android:background="@drawable/ripple_transparent_background"
            android:padding="16.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/repair"
            app:customFont="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider_button"
            app:layout_constraintTop_toBottomOf="@id/divider_description"
            app:layout_constraintWidth_percent="0.5" />
        <View
            android:id="@id/divider_description"
            android:background="@color/common_divider_color"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            app:layout_constraintTop_toBottomOf="@id/description" />
        <View
            android:id="@id/divider_button"
            android:background="@color/common_divider_color"
            android:layout_width="0.5dip"
            android:layout_height="0.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_cancel"
            app:layout_constraintTop_toBottomOf="@id/divider_description" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>