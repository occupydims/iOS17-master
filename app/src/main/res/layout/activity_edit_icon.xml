<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@id/top_bar"
        app:layout_constraintTop_toBottomOf="parent"
        layout="@layout/icon_pack_top_bar" />
    <ImageView
        android:id="@id/background_image"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />
    <com.truelib.themes.icon_studio.view.icon_edit.IconEditView
        android:id="@id/editor_preview"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />
    <EditText
        android:textSize="18.0dip"
        android:textColor="@color/pro_main_text"
        android:id="@id/edt_wallpaper_url"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Wallpaper URL"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />
    <Button
        android:textSize="18.0dip"
        android:id="@id/btn_pick_image"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Pick Image"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_wallpaper_url" />
    <FrameLayout
        android:id="@id/buttons_container"
        android:paddingTop="16.0dip"
        android:paddingBottom="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginHorizontal="16.0dip"
        android:paddingVertical="16.0dip"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_gravity="end"
            android:id="@id/button_collapse"
            android:layout_width="@dimen/edit_button_size"
            android:layout_height="@dimen/edit_button_size"
            android:src="@drawable/button_collapse" />
        <ImageView
            android:layout_gravity="end"
            android:id="@id/button_change_sample"
            android:layout_width="@dimen/edit_button_size"
            android:layout_height="@dimen/edit_button_size"
            android:src="@drawable/button_change_sample"
            android:layout_marginEnd="88.0dip" />
        <ImageView
            android:layout_gravity="end"
            android:id="@id/button_change_background"
            android:layout_width="@dimen/edit_button_size"
            android:layout_height="@dimen/edit_button_size"
            android:src="@drawable/button_change_bg"
            android:layout_marginEnd="44.0dip" />
        <ImageView
            android:id="@id/button_minus"
            android:layout_width="@dimen/edit_button_size"
            android:layout_height="@dimen/edit_button_size"
            android:src="@drawable/button_minus_state" />
        <TextView
            android:textSize="15.0dip"
            android:textColor="@color/icon_pack_button_color"
            android:gravity="center"
            android:id="@id/text_percent"
            android:background="@drawable/percent_text_edit_bg"
            android:layout_width="60.0dip"
            android:layout_height="28.0dip"
            android:text="100%"
            android:layout_marginStart="36.0dip" />
        <ImageView
            android:id="@id/button_plus"
            android:layout_width="@dimen/edit_button_size"
            android:layout_height="@dimen/edit_button_size"
            android:src="@drawable/button_plus_state"
            android:layout_marginStart="104.0dip" />
    </FrameLayout>
    <FrameLayout
        android:id="@id/main_frame"
        android:background="@color/icon_pack_bg_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>