<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@id/image_container"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginBottom="8.0dip"
        app:cardBackgroundColor="@color/theme_background_primary"
        app:cardCornerRadius="16.0dip"
        app:cardElevation="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="@dimen/wallpaper_ratio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/theme_transparent_secondary"
        app:strokeWidth="1.0dip">
        <ImageView
            android:id="@id/wallpaper_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:foreground="@drawable/ripple_no_border"
            android:src="@drawable/theme_default_thumb"
            android:scaleType="centerCrop" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>