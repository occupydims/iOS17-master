<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="42.0dip"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/back_button"
            android:paddingLeft="8.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:visibility="gone"
            android:layout_width="40.0dip"
            android:layout_height="32.0dip"
            android:src="@drawable/back_icon"
            android:layout_marginStart="4.0dip"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="4.0dip"
            app:layout_constraintBottom_toBottomOf="@id/top_bar_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/top_bar_title" />
        <TextView
            android:textSize="17.0dip"
            android:textColor="@color/icon_pack_button_color"
            android:ellipsize="end"
            android:id="@id/back_text"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="5.0dip"
            android:layout_marginEnd="10.0dip"
            android:paddingVertical="5.0dip"
            app:layout_constraintBottom_toBottomOf="@id/top_bar_title"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="@id/top_bar_title" />
        <TextView
            android:textSize="18.5dip"
            android:textStyle="bold"
            android:textColor="@color/icon_pack_text"
            android:id="@id/top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_pack_studio"
            android:layout_marginStart="16.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/back_text"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="17.0dip"
            android:textColor="@color/icon_pack_button_color"
            android:gravity="end"
            android:id="@id/action_text"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="10.0dip"
            android:paddingEnd="16.0dip"
            android:paddingVertical="5.0dip"
            app:layout_constraintBottom_toBottomOf="@id/top_bar_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/top_bar_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.truelib.themes.view.IOSTabView
        android:id="@id/tab_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginHorizontal="16.0dip"
        app:item_font="2"
        app:item_padding="11.0dip"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:selection_background="@color/theme_transparent_tertiary"
        app:selection_bold="false"
        app:selection_corner="100.0dip"
        app:selection_text_color="@color/theme_text_primary"
        app:showDivider="false"
        app:showShadow="false"
        app:show_background="false"
        app:show_padding="false"
        app:unselection_text_color="@color/theme_text_secondary" />
    <FrameLayout
        android:id="@id/fragment_container_view"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="12.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>