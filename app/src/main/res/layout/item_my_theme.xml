<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/cv_item_wallpaper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6.0dip"
    android:layout_marginBottom="6.0dip"
    android:layout_marginVertical="6.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="12.0dip"
        app:cardElevation="0.0dip"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/theme_transparent_secondary"
        app:strokeWidth="1.0dip">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@id/ivImage"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:src="@drawable/theme_default_thumb"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="h,80:142"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:layout_gravity="center|right|top"
                android:id="@id/ic_pro"
                android:padding="@dimen/medium_margin"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/ic_new"
        android:visibility="invisible"
        android:layout_width="29.0dip"
        android:layout_height="16.0dip"
        android:layout_marginTop="6.0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/new_anim" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="12.5dip"
        android:textColor="@color/icon_pack_text"
        android:id="@id/tv_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        app:customFont="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view" />
</androidx.constraintlayout.widget.ConstraintLayout>