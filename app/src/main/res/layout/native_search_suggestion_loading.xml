<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    android:id="@id/shimmer_container"
    android:background="@color/transparent_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:shimmer_auto_start="false"
    app:shimmer_base_color="@color/transparent_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14.0dip"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@id/sponsor"
            android:paddingLeft="8.0dip"
            android:paddingTop="6.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="6.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="8.0dip"
            android:text="@string/sponsored"
            android:layout_marginHorizontal="8.0dip"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="6.0dip"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginBottom="8.0dip"
            android:layout_marginHorizontal="8.0dip">
            <ImageView
                android:id="@id/shimmer_icon"
                android:layout_width="44.0dip"
                android:layout_height="44.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:layout_marginStart="8.0dip"
                android:layout_marginVertical="8.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:textSize="14.199982dip"
                android:id="@id/shimmer_title"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginBottom="1.0dip"
                android:layout_marginHorizontal="8.0dip"
                app:layout_constraintBottom_toTopOf="@id/shimmer_body"
                app:layout_constraintEnd_toStartOf="@id/shimmer_action"
                app:layout_constraintStart_toEndOf="@id/shimmer_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />
            <TextView
                android:textSize="11.0dip"
                android:id="@id/shimmer_body"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="1.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginHorizontal="8.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/shimmer_action"
                app:layout_constraintStart_toEndOf="@id/shimmer_icon"
                app:layout_constraintTop_toBottomOf="@id/shimmer_title" />
            <ImageView
                android:id="@id/shimmer_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:src="@drawable/ad_download_ic"
                android:layout_marginEnd="8.0dip"
                android:layout_marginVertical="8.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>