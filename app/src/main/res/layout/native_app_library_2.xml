<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/ad_blur_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />
    <ImageView
        android:id="@id/ad_media_pro"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <ImageView
        android:id="@id/ad_media_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@id/ad_app_icon"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip"
            android:layout_marginStart="8.0dip"
            android:layout_marginVertical="8.0dip"
            app:layout_constraintBottom_toTopOf="@id/native_lib_content"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/native_lib_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:textSize="12.5dip"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:ellipsize="end"
                android:id="@id/ad_headline"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:maxLines="1"
                android:layout_marginStart="8.0dip"
                app:layout_constraintEnd_toStartOf="@id/rating_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="8.0dip" />
            <androidx.cardview.widget.CardView
                android:id="@id/rating_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8.0dip"
                app:cardBackgroundColor="#ffffffff"
                app:cardCornerRadius="24.0dip"
                app:cardElevation="0.0dip"
                app:layout_constraintBottom_toBottomOf="@id/ad_headline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ad_headline">
                <TextView
                    android:textSize="10.0dip"
                    android:textColor="#ffff9f0a"
                    android:id="@id/ad_stars"
                    android:paddingLeft="6.0dip"
                    android:paddingTop="3.0dip"
                    android:paddingRight="6.0dip"
                    android:paddingBottom="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_star_app_lib"
                    android:paddingHorizontal="6.0dip"
                    android:paddingVertical="3.0dip" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="9.0dip"
                android:textColor="#ff000000"
                android:ellipsize="end"
                android:id="@id/ad_body"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="1.0dip"
                android:layout_marginRight="8.0dip"
                android:maxLines="2"
                android:layout_marginHorizontal="8.0dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ad_headline" />
            <FrameLayout
                android:id="@id/button_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ad_body">
                <TextView
                    android:textSize="11.0dip"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:layout_gravity="end"
                    android:id="@id/ad_call_to_action"
                    android:background="@drawable/bg_native_button_medium_radius"
                    android:paddingLeft="20.5dip"
                    android:paddingTop="4.5dip"
                    android:paddingRight="20.5dip"
                    android:paddingBottom="4.5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:layout_marginBottom="8.0dip"
                    android:maxLines="1"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="8.0dip"
                    android:backgroundTint="#ff0672ff"
                    android:paddingHorizontal="20.5dip"
                    android:paddingVertical="4.5dip" />
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.gms.ads.nativead.NativeAdView>