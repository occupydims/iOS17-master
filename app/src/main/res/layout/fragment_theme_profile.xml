<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:background="@color/theme_background_semi_transparent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@id/banner_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/theme_profile_margin"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/layout_banner_cross_theme" />
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@id/guide_line_33"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            app:layout_constraintGuide_percent="0.333333" />
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@id/guide_line_66"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            app:layout_constraintGuide_percent="0.666666" />
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/my_theme_btn"
            android:background="@drawable/theme_profile_border"
            android:paddingTop="12.0dip"
            android:paddingBottom="12.0dip"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:layout_marginEnd="8.0dip"
            android:paddingVertical="12.0dip"
            app:layout_constraintEnd_toStartOf="@id/guide_line_33"
            app:layout_constraintStart_toStartOf="@id/favorite_button"
            app:layout_constraintTop_toBottomOf="@id/banner_list">
            <ImageView
                android:paddingTop="6.0dip"
                android:paddingBottom="6.0dip"
                android:layout_width="64.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/my_theme_btn_icon"
                android:paddingVertical="6.0dip" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="10.0dip"
                android:textColor="@color/theme_text_primary"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:text="@string/my_themes"
                android:maxLines="1"
                app:customFont="2" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/my_icon_btn"
            android:background="@drawable/theme_profile_border"
            android:paddingTop="12.0dip"
            android:paddingBottom="12.0dip"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginHorizontal="8.0dip"
            android:paddingVertical="12.0dip"
            app:layout_constraintEnd_toStartOf="@id/guide_line_66"
            app:layout_constraintStart_toEndOf="@id/guide_line_33"
            app:layout_constraintTop_toTopOf="@id/my_theme_btn">
            <ImageView
                android:paddingTop="6.0dip"
                android:paddingBottom="6.0dip"
                android:layout_width="64.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/ic_my_icon"
                android:paddingVertical="6.0dip" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="10.0dip"
                android:textColor="@color/theme_text_primary"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:text="@string/my_icons"
                android:maxLines="1"
                app:customFont="2" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/my_wallpaper_btn"
            android:background="@drawable/theme_profile_border"
            android:paddingTop="12.0dip"
            android:paddingBottom="12.0dip"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.0dip"
            android:paddingVertical="12.0dip"
            app:layout_constraintEnd_toEndOf="@id/favorite_button"
            app:layout_constraintStart_toEndOf="@id/guide_line_66"
            app:layout_constraintTop_toTopOf="@id/my_theme_btn">
            <ImageView
                android:paddingTop="6.0dip"
                android:paddingBottom="6.0dip"
                android:layout_width="64.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/ic_my_wallpaper"
                android:paddingVertical="6.0dip" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="10.0dip"
                android:textColor="@color/theme_text_primary"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:text="@string/my_wallpaper"
                android:maxLines="1"
                app:customFont="2" />
        </LinearLayout>
        <com.truelib.common.view.SettingItemView
            android:id="@id/favorite_button"
            android:background="@drawable/theme_profile_border"
            android:padding="16.0dip"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/theme_profile_margin"
            android:layout_marginTop="12.0dip"
            android:layout_marginRight="@dimen/theme_profile_margin"
            android:foreground="@drawable/ripple_transparent_background_16"
            android:layout_marginHorizontal="@dimen/theme_profile_margin"
            app:item_space="@dimen/dp12"
            app:layout_constraintTop_toBottomOf="@id/my_theme_btn"
            app:next_button="@drawable/ic_next_info"
            app:setting_icon="@drawable/wallpaper_favorite_filled"
            app:setting_title="@string/favorites"
            app:setting_title_color="@color/theme_text_primary"
            app:setting_title_font="2" />
        <com.truelib.common.view.SettingItemView
            android:id="@id/premium_state"
            android:background="@drawable/theme_profile_border"
            android:padding="16.0dip"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/theme_profile_margin"
            android:layout_marginTop="12.0dip"
            android:layout_marginRight="@dimen/theme_profile_margin"
            android:foreground="@drawable/ripple_transparent_background_16"
            android:layout_marginHorizontal="@dimen/theme_profile_margin"
            app:item_space="@dimen/dp12"
            app:layout_constraintTop_toBottomOf="@id/favorite_button"
            app:next_button="@drawable/ic_next_info"
            app:setting_icon="@drawable/theme_premium_badge"
            app:setting_title="@string/join_premium_package"
            app:setting_title_color="@color/white"
            app:setting_title_font="2" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="14.199982dip"
            android:textColor="@color/theme_text_secondary"
            android:id="@id/about_us"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/theme_profile_margin"
            android:layout_marginTop="12.0dip"
            android:layout_marginRight="@dimen/theme_profile_margin"
            android:text="@string/about_us"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="@dimen/theme_profile_margin"
            app:layout_constraintTop_toBottomOf="@id/premium_state" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/about_container"
            android:background="@drawable/theme_profile_border"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/theme_profile_margin"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="@dimen/theme_profile_margin"
            android:layout_marginHorizontal="@dimen/theme_profile_margin"
            app:layout_constraintTop_toBottomOf="@id/about_us">
            <com.truelib.common.view.SettingItemView
                android:id="@id/appearence"
                android:background="@drawable/ripple_transparent_background_16"
                android:padding="16.0dip"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:item_space="@dimen/dp12"
                app:layout_constraintTop_toBottomOf="@id/my_theme_btn"
                app:next_button="@drawable/ic_next_info"
                app:setting_icon="@drawable/theme_profile_appearence"
                app:setting_title="@string/appearence"
                app:setting_title_color="@color/theme_text_primary"
                app:setting_title_font="2" />
            <com.truelib.common.view.SettingItemView
                android:id="@id/privacy"
                android:background="@drawable/ripple_transparent_background_16"
                android:padding="16.0dip"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:item_space="@dimen/dp12"
                app:layout_constraintTop_toBottomOf="@id/my_theme_btn"
                app:next_button="@drawable/ic_next_info"
                app:setting_icon="@drawable/theme_profile_privacy"
                app:setting_title="@string/privacy"
                app:setting_title_color="@color/theme_text_primary"
                app:setting_title_font="2" />
        </LinearLayout>
        <FrameLayout
            android:id="@id/profile_ads_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/theme_profile_margin"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="@dimen/theme_profile_margin"
            android:layout_marginHorizontal="@dimen/theme_profile_margin"
            app:layout_constraintTop_toBottomOf="@id/about_container" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>