<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/new_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@id/action_bar_custom"
        layout="@layout/action_bar_settings" />
    <com.truelib.settings.custom.SafeScrollView
        android:paddingBottom="@dimen/small_margin"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        app:layout_constraintBottom_toTopOf="@id/banner_ad_frame"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.truelib.settings.custom.TextCustomFont
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/content_3rd"
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:text="@string/action"
                android:paddingStart="@dimen/medium_margin"
                android:layout_marginHorizontal="@dimen/medium_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/contain_ai_gesture"
                android:background="@drawable/new_background_item_group_setting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginHorizontal="@dimen/medium_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title">
                <com.truelib.settings.custom.TextCustomFont
                    android:textSize="14.0dip"
                    android:textColor="@color/color_content_1st"
                    android:ellipsize="end"
                    android:id="@id/swipe_up_gesture"
                    android:paddingTop="@dimen/item_settings_margin"
                    android:paddingBottom="@dimen/item_settings_margin"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/height_item_settings"
                    android:text="@string/swipe_up_gesture"
                    android:lines="1"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:paddingVertical="@dimen/item_settings_margin"
                    app:layout_constraintEnd_toStartOf="@id/switch_use_gesture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.truelib.settingview.view.OsSwitchView
                    android:id="@id/switch_use_gesture"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/medium_margin"
                    app:layout_constraintBottom_toBottomOf="@id/swipe_up_gesture"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/swipe_up_gesture" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.truelib.settings.custom.TextCustomFont
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/content_3rd"
                android:id="@id/des_ai_gesture"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingRight="@dimen/medium_margin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:text="@string/des_ai_gesture"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:paddingHorizontal="@dimen/medium_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contain_ai_gesture" />
            <com.truelib.settings.custom.TextCustomFont
                android:textSize="14.0dip"
                android:textColor="@color/color_content_brand"
                android:id="@id/restore_purchase"
                android:background="@drawable/new_background_item_group_setting"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingTop="12.0dip"
                android:paddingRight="@dimen/medium_margin"
                android:paddingBottom="12.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:text="@string/restore_purchase"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:paddingHorizontal="@dimen/medium_margin"
                android:paddingVertical="12.0dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/des_ai_gesture" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.truelib.settings.custom.SafeScrollView>
</LinearLayout>