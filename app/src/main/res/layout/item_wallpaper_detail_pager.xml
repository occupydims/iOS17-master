<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@id/wallpaper_container"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginBottom="@dimen/dp32"
        android:layout_marginVertical="@dimen/dp32"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="32.0dip"
        app:cardElevation="0.0dip"
        app:layout_constraintDimensionRatio="@dimen/wallpaper_ratio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/theme_transparent_secondary"
        app:strokeWidth="1.0dip">
        <ImageView
            android:id="@id/wallpaper_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:foreground="@drawable/ripple_no_border"
            android:scaleType="centerCrop"
            android:transitionName="image_transition" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>