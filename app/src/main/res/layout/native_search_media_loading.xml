<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    android:id="@id/shimmer_container"
    android:background="@drawable/card_shimmer_ads"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/search_media_height"
    app:shimmer_auto_start="false"
    app:shimmer_base_color="#ffcccccc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.gms.ads.nativead.MediaView
        android:id="@id/shimmer_media"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/ad_native_media_gradient" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip">
        <ImageView
            android:id="@id/shimmer_icon"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginStart="8.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="14.199982dip"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@id/shimmer_headline"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginBottom="1.0dip"
            android:maxLines="1"
            android:layout_marginHorizontal="8.0dip"
            app:layout_constraintBottom_toTopOf="@id/shimmer_body"
            app:layout_constraintEnd_toStartOf="@id/shimmer_action"
            app:layout_constraintStart_toEndOf="@id/shimmer_icon"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="12.0dip"
            android:ellipsize="end"
            android:id="@id/shimmer_body"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="1.0dip"
            android:layout_marginRight="8.0dip"
            android:maxLines="1"
            android:layout_marginHorizontal="8.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/shimmer_action"
            app:layout_constraintStart_toEndOf="@id/shimmer_icon"
            app:layout_constraintTop_toBottomOf="@id/shimmer_headline" />
        <Button
            android:textSize="14.199982dip"
            android:textColor="@color/white"
            android:id="@id/shimmer_action"
            android:background="@drawable/bg_native_zero_page_action_button"
            android:paddingLeft="15.5dip"
            android:paddingTop="8.5dip"
            android:paddingRight="15.5dip"
            android:paddingBottom="8.5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8.0dip"
            android:paddingHorizontal="15.5dip"
            android:paddingVertical="8.5dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>