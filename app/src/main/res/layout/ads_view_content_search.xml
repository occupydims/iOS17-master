<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/ad_constraint_container"
    android:paddingBottom="@dimen/all_apps_native_padding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@id/ad_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_apps_native_padding"
        android:layout_marginStart="@dimen/all_apps_native_padding"
        app:cardCornerRadius="10.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/ad_app_icon"
            android:layout_width="@dimen/native_ad_image_size"
            android:layout_height="@dimen/native_ad_image_size" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@id/ad_ic_inline"
        android:layout_marginTop="@dimen/inline_ad_mark_margin_top"
        android:layout_marginStart="@dimen/all_apps_native_content_margin"
        app:layout_constraintStart_toEndOf="@id/ad_image"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/AdsMarkZeroPage" />
    <TextView
        android:textSize="15.0dip"
        android:ellipsize="end"
        android:id="@id/ad_headline"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_apps_native_padding"
        android:maxLines="1"
        android:layout_marginStart="4.0dip"
        android:layout_marginEnd="@dimen/all_apps_native_content_margin"
        app:layout_constraintEnd_toStartOf="@id/ad_call_to_action"
        app:layout_constraintStart_toEndOf="@id/ad_ic_inline"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textSize="12.0dip"
        android:ellipsize="end"
        android:id="@id/ad_body"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:maxLines="1"
        android:layout_marginStart="@dimen/all_apps_native_content_margin"
        android:layout_marginEnd="@dimen/all_apps_native_content_margin"
        app:layout_constraintEnd_toStartOf="@id/ad_call_to_action"
        app:layout_constraintStart_toEndOf="@id/ad_image"
        app:layout_constraintTop_toBottomOf="@id/ad_headline" />
    <RatingBar
        android:id="@id/ad_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:layout_marginStart="@dimen/all_apps_native_content_margin"
        app:layout_constraintStart_toEndOf="@id/ad_image"
        app:layout_constraintTop_toBottomOf="@id/ad_body"
        style="?android:ratingBarStyleSmall" />
    <Button
        android:textSize="13.0dip"
        android:textColor="@android:color/white"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@id/ad_call_to_action"
        android:background="@drawable/bg_native_search_action_button"
        android:paddingLeft="8.0dip"
        android:paddingTop="4.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="38.0dip"
        android:layout_marginTop="7.0dip"
        android:maxWidth="@dimen/ad_buttom_max_width"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/all_app_native_padding_small"
        android:paddingHorizontal="8.0dip"
        android:paddingVertical="4.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>