<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="#ff000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@id/top_bar"
        layout="@layout/clock_top_bar" />
    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/progress_wrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.truelib.common.view.ValueProgressView
                    android:id="@id/progress"
                    android:layout_width="292.0dip"
                    android:layout_height="292.0dip"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:textSize="68.0dip"
                    android:textColor="@color/white"
                    android:id="@id/count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.truelib.common.TextViewCustomFont
                    android:textSize="17.0dip"
                    android:textColor="@color/clock_sub_text_color"
                    android:id="@id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:drawablePadding="4.0dip"
                    android:drawableStart="@drawable/ringbell"
                    app:layout_constraintBottom_toTopOf="@id/count_down"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.truelib.common.TextViewCustomFont
                android:textSize="15.0dip"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:id="@id/btn_cancel"
                android:background="@drawable/gray_selector_circle_bg"
                android:layout_width="70.0dip"
                android:layout_height="70.0dip"
                android:layout_marginTop="16.0dip"
                android:text="@string/cancel"
                android:layout_marginStart="16.0dip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_wrap" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="15.0dip"
                android:textColor="@color/clock_start_text_color"
                android:gravity="center"
                android:id="@id/btn_start"
                android:background="@drawable/circle_bg"
                android:layout_width="70.0dip"
                android:layout_height="70.0dip"
                android:layout_marginTop="16.0dip"
                android:text="@string/resume"
                android:layout_marginEnd="16.0dip"
                android:backgroundTint="@color/clock_start_bg_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_wrap" />
            <com.truelib.common.TextViewCustomFont
                android:textSize="15.0dip"
                android:textColor="@color/clock_selected_color"
                android:gravity="center"
                android:id="@id/btn_stop"
                android:background="@drawable/circle_bg"
                android:layout_width="70.0dip"
                android:layout_height="70.0dip"
                android:layout_marginTop="16.0dip"
                android:text="@string/pause"
                android:layout_marginEnd="16.0dip"
                android:backgroundTint="@color/clock_pause_bg_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_wrap" />
            <include
                android:id="@id/timer_config"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="102.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginHorizontal="16.0dip"
                app:layout_constraintTop_toBottomOf="@id/progress_wrap"
                layout="@layout/timer_config_layout" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>