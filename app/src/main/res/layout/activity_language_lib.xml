<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/main"
    android:background="@color/color_background_language"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:elevation="2.0dip"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="40.0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/bg_icon_back_glass"
            android:padding="8.0dip"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:foreground="@drawable/ripple_back"
            android:src="@drawable/ic_arrow_back_settings"
            android:importantForAccessibility="no" />
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/ios26ContentOnBg1st_solid"
        android:id="@id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/btnNext"
        android:layout_width="52.0dip"
        android:layout_height="40.0dip"
        android:src="@drawable/os_btn_next"
        android:layout_marginEnd="16.0dip"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@id/tvNext"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="@id/btnNext"
        app:layout_constraintEnd_toEndOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="@id/btnNext"
        app:layout_constraintTop_toTopOf="@id/btnNext" />
    <androidx.core.widget.NestedScrollView
        android:paddingTop="2.0dip"
        android:paddingBottom="2.0dip"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:fillViewport="true"
        android:paddingVertical="2.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingHorizontal="16.0dip">
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@id/rcvLanguage"
                android:background="@drawable/bg_language_corner_24"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>