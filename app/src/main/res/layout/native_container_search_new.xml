<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:cardBackgroundColor="#4deeeeee"
    app:cardCornerRadius="@dimen/native_search_new_default_radius"
    app:cardElevation="0.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@id/fl_adplaceholder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@id/shimmer_container"
        android:padding="@dimen/all_app_native_padding_small"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="true"
        app:shimmer_base_color="#ffcccccc">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/ad_constraint_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@id/ad_image"
                android:layout_width="38.0dip"
                android:layout_height="38.0dip"
                app:cardCornerRadius="10.0dip"
                app:cardElevation="0.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@id/ad_content_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="15.0dip"
                android:ellipsize="end"
                android:id="@id/ad_headline"
                android:background="@color/shimmer_content"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginStart="@dimen/all_apps_native_content_margin"
                android:layout_marginEnd="@dimen/all_apps_native_content_margin"
                app:layout_constraintEnd_toStartOf="@id/ad_call_to_action"
                app:layout_constraintStart_toEndOf="@id/ad_image"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:textSize="8.0dip"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:gravity="center"
                android:id="@id/ad_mark_shimmer"
                android:background="@drawable/ad_mark_background"
                android:layout_width="27.0dip"
                android:layout_height="14.0dip"
                android:text="Ad"
                android:layout_marginStart="@dimen/all_apps_native_content_margin"
                app:layout_constraintBottom_toBottomOf="@id/ad_content"
                app:layout_constraintStart_toEndOf="@id/ad_image"
                app:layout_constraintTop_toTopOf="@id/ad_content" />
            <TextView
                android:textSize="12.0sp"
                android:ellipsize="end"
                android:id="@id/ad_content"
                android:background="@color/shimmer_content"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:maxLines="1"
                android:layout_marginStart="6.0dip"
                android:layout_marginEnd="@dimen/all_apps_native_content_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ad_call_to_action"
                app:layout_constraintStart_toEndOf="@id/ad_mark_shimmer"
                app:layout_constraintTop_toBottomOf="@id/ad_headline" />
            <Button
                android:textSize="10.0dip"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@id/ad_call_to_action"
                android:background="@drawable/bg_native_search_action_button"
                android:padding="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:maxWidth="@dimen/ad_buttom_max_width"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.cardview.widget.CardView>