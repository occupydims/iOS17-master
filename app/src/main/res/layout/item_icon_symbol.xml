<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/icon_image"
        android:background="@drawable/prop_background"
        android:padding="16.0dip"
        android:layout_width="@dimen/select_icon_size"
        android:layout_height="@dimen/select_icon_size"
        android:layout_marginLeft="@dimen/item_symbol_margin_horizontal"
        android:layout_marginRight="@dimen/item_symbol_margin_horizontal"
        android:layout_marginHorizontal="@dimen/item_symbol_margin_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@id/pro_badge"
        android:background="@drawable/pro_badge_group"
        android:paddingLeft="8.0dip"
        android:paddingTop="2.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="2.0dip"
        android:layout_width="26.0dip"
        android:layout_height="12.0dip"
        android:src="@drawable/clonw_small"
        android:paddingHorizontal="8.0dip"
        android:paddingVertical="2.0dip"
        app:layout_constraintBottom_toBottomOf="@id/icon_image"
        app:layout_constraintRight_toRightOf="@id/icon_image" />
    <TextView
        android:textSize="13.0dip"
        android:textColor="@color/icon_pack_text"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@id/icon_text"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_image" />
</androidx.constraintlayout.widget.ConstraintLayout>