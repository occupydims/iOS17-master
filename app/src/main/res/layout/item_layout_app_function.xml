<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/icon_app_function"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="16.0dip"
        android:textColor="@color/color_content_1st"
        android:ellipsize="end"
        android:id="@id/app_name_function"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:maxLines="1"
        android:layout_marginStart="8.0dip"
        app:customFont="2"
        app:layout_constraintBottom_toTopOf="@id/des_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_app_function"
        app:layout_constraintTop_toTopOf="@id/icon_app_function" />
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="12.0dip"
        android:textColor="@color/content_3rd"
        android:ellipsize="end"
        android:id="@id/des_app"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:maxLines="1"
        android:layout_marginStart="8.0dip"
        app:customFont="0"
        app:layout_constraintBottom_toBottomOf="@id/icon_app_function"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_app_function"
        app:layout_constraintTop_toBottomOf="@id/app_name_function" />
    <View
        android:id="@id/divider_line"
        android:background="@color/divider_color"
        android:layout_width="0.0dip"
        android:layout_height="3.0px"
        android:layout_marginTop="6.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_app_function"
        app:layout_constraintTop_toBottomOf="@id/icon_app_function" />
</androidx.constraintlayout.widget.ConstraintLayout>