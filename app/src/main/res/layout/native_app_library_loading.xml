<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    android:id="@id/shimmer_container"
    android:background="@drawable/card_shimmer_ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:shimmer_auto_start="false"
    app:shimmer_base_color="#ffcccccc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/shimmer_icon"
            android:background="@color/shimmer_content"
            android:clickable="false"
            android:layout_width="54.0dip"
            android:layout_height="54.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/shimmer_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shimmer_icon"
            app:layout_constraintTop_toTopOf="@id/shimmer_icon">
            <TextView
                android:textSize="12.5sp"
                android:textStyle="bold"
                android:textColor="@color/shimmer_content"
                android:ellipsize="end"
                android:id="@id/shimmer_headline"
                android:background="@color/shimmer_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp2"
                android:maxLines="1"
                android:layout_marginStart="6.0dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/shimmer_icon"
                app:layout_constraintTop_toTopOf="@id/shimmer_icon" />
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/ll_ads_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:layout_marginStart="6.0dip"
                app:layout_constraintStart_toEndOf="@id/shimmer_icon"
                app:layout_constraintTop_toBottomOf="@id/shimmer_headline">
                <TextView
                    android:layout_gravity="center"
                    android:id="@id/ads_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AdsMarkZeroPage" />
                <ImageView
                    android:layout_gravity="center"
                    android:id="@id/ad_star_mark"
                    android:layout_width="13.0dip"
                    android:layout_height="13.0dip"
                    android:src="@drawable/ad_ic_star_light"
                    android:layout_marginStart="4.0dip" />
                <TextView
                    android:textSize="12.0dip"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:id="@id/ad_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginStart="4.0dip" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="10.0sp"
            android:textColor="@color/shimmer_content"
            android:ellipsize="end"
            android:id="@id/ad_body"
            android:background="@color/shimmer_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:lines="2"
            app:layout_constraintTop_toBottomOf="@id/shimmer_icon" />
        <TextView
            android:textSize="13.0sp"
            android:textColor="@color/shimmer_content"
            android:gravity="center"
            android:id="@id/shimmer_action"
            android:background="@color/shimmer_content"
            android:layout_width="fill_parent"
            android:layout_height="24.0dip"
            android:layout_marginTop="5.0dip"
            android:lines="1"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/ad_body" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>