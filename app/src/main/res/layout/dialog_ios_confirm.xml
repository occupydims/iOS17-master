<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/dialog_background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.common.TextViewCustomFont
        android:textSize="17.0dip"
        android:textColor="@color/common_main_text_color"
        android:gravity="center"
        android:id="@id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="19.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginHorizontal="16.0dip"
        app:customFont="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="13.0dip"
        android:textColor="@color/common_main_text_color"
        android:gravity="center"
        android:id="@id/dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginHorizontal="16.0dip"
        app:layout_constraintTop_toBottomOf="@id/dialog_title" />
    <EditText
        android:textSize="17.0dip"
        android:textColor="@color/common_main_text_color"
        android:textColorHint="@color/sub_text_color"
        android:id="@id/dialog_input"
        android:background="@drawable/dialog_input_background"
        android:paddingLeft="4.0dip"
        android:paddingTop="2.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="2.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="14.0dip"
        android:layout_marginRight="16.0dip"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginHorizontal="16.0dip"
        android:paddingHorizontal="4.0dip"
        android:paddingVertical="2.0dip"
        app:layout_constraintTop_toBottomOf="@id/dialog_content" />
    <View
        android:id="@id/divider_top"
        android:background="@color/divider_color"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="15.0dip"
        app:layout_constraintTop_toBottomOf="@id/dialog_input"
        app:layout_goneMarginTop="16.0dip" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="17.0dip"
        android:textColor="@color/ios_button_color"
        android:gravity="center"
        android:id="@id/cancel_button"
        android:background="@drawable/confirm_button_background_left"
        android:paddingTop="9.0dip"
        android:paddingBottom="9.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:paddingVertical="9.0dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/divider_bottom"
        app:layout_constraintTop_toBottomOf="@id/divider_top" />
    <View
        android:id="@id/divider_bottom"
        android:background="@color/divider_color"
        android:layout_width="0.5dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cancel_button"
        app:layout_constraintRight_toLeftOf="@id/ok_button"
        app:layout_constraintTop_toBottomOf="@id/divider_top" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="17.0dip"
        android:textStyle="bold"
        android:textColor="@color/ios_button_color"
        android:gravity="center"
        android:id="@id/ok_button"
        android:background="@drawable/confirm_button_background_right"
        android:paddingTop="9.0dip"
        android:paddingBottom="9.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:paddingVertical="9.0dip"
        app:layout_constraintLeft_toRightOf="@id/divider_bottom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_top" />
</androidx.constraintlayout.widget.ConstraintLayout>