<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.themes.wallpaper_pack.view.view.HomeScreenView
        android:id="@id/workspace"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="16.75dip"
        android:textColor="@color/theme_neutrals_black"
        android:id="@id/btn_cancel"
        android:background="@drawable/rounded_button_bg"
        android:paddingLeft="14.5dip"
        android:paddingTop="5.5dip"
        android:paddingRight="14.5dip"
        android:paddingBottom="5.5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dip"
        android:text="@string/cancel"
        android:layout_marginStart="19.0dip"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="add"
        android:paddingHorizontal="14.5dip"
        android:paddingVertical="5.5dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="16.75dip"
        android:textColor="@color/white"
        android:id="@id/btn_apply"
        android:background="@drawable/rounded_button_bg"
        android:paddingLeft="14.5dip"
        android:paddingTop="5.5dip"
        android:paddingRight="14.5dip"
        android:paddingBottom="5.5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dip"
        android:text="@string/apply"
        android:layout_marginEnd="19.0dip"
        android:backgroundTint="@color/theme_color_blue"
        android:backgroundTintMode="add"
        android:paddingHorizontal="14.5dip"
        android:paddingVertical="5.5dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <FrameLayout
        android:id="@id/loading_view"
        android:background="@color/loading_view_dim"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <include
            android:layout_gravity="center"
            android:id="@id/progress_item"
            android:layout_width="@dimen/loading_thumb_size"
            android:layout_height="@dimen/loading_thumb_size"
            android:layout_marginBottom="4.0dip"
            layout="@layout/theme_loading_layout" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>