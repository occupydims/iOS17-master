<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/bg_alarm_repeat_first"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingTop="@dimen/normal_margin"
    android:paddingRight="@dimen/activity_margin"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/activity_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.truelib.common.TextViewCustomFont
        android:textSize="16.0sp"
        android:textColor="@color/white"
        android:id="@id/tv_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iv_select_day"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@id/iv_select_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        android:layout_alignParentEnd="true" />
    <View
        android:id="@id/iv_line"
        android:background="@color/option_divider_color"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_below="@id/tv_title" />
</RelativeLayout>