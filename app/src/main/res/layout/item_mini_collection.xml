<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@id/image_container"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_marginLeft="6.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginRight="6.0dip"
        android:layout_marginBottom="6.0dip"
        android:layout_marginHorizontal="6.0dip"
        android:layout_marginVertical="6.0dip"
        app:cardBackgroundColor="@color/theme_background_primary"
        app:cardCornerRadius="16.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="0.575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/collection_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:foreground="@drawable/ripple_no_border"
            android:scaleType="centerCrop" />
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@id/collection_gradient"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip">
            <com.truelib.common.TextViewCustomFont
                android:textSize="12.5dip"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:id="@id/collection_name"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:paddingBottom="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingHorizontal="2.0dip"
                app:customFont="2" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>