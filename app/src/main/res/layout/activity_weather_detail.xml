<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layoutDescription="@xml/weather_animation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.launcher3.feature.weather.view.BackgroundAnim
        android:id="@id/viewAnim"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <com.android.launcher3.views.SafeNestedScrollView
        android:id="@id/scroll_view"
        android:clipToPadding="false"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/max_temp"
        app:layout_constraintWidth_percent="@dimen/weather_width_screen">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_weather_detail"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginHorizontal="16.0dip">
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@id/weather_details"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="13.0dip"
                    app:layout_constraintBottom_toTopOf="@id/max_temp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/current_temp" />
                <View
                    android:background="#64ffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginStart="13.0dip"
                    android:layout_marginEnd="8.0dip" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/hour_forecast"
                    android:scrollbars="none"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />
            </LinearLayout>
            <FrameLayout
                android:id="@id/native_ad_frame"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginTop="16.0dip"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginHorizontal="@dimen/medium_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/daily_forecast"
                android:background="@drawable/bg_weather_detail"
                android:padding="13.0dip"
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16.0dip"
                android:overScrollMode="never"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/detail_forecast"
                android:paddingBottom="13.0dip"
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </LinearLayout>
    </com.android.launcher3.views.SafeNestedScrollView>
    <TextView
        android:textSize="16.0dip"
        android:textColor="@color/white"
        android:id="@id/current_state"
        android:paddingBottom="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_name" />
    <TextView
        android:textSize="88.0dip"
        android:textColor="@color/white"
        android:id="@id/current_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_name" />
    <TextView
        android:textSize="16.0dip"
        android:textColor="@color/white"
        android:id="@id/weather_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clouds"
        app:layout_constraintBottom_toTopOf="@id/max_temp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_temp" />
    <TextView
        android:textSize="16.0dip"
        android:textColor="@color/white"
        android:id="@id/max_temp"
        android:paddingBottom="30.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H:30° L:26°"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_state" />
    <TextView
        android:textSize="28.0dip"
        android:textColor="@color/white"
        android:id="@id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/current_temp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.motion.widget.MotionLayout>