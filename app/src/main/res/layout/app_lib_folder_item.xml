<?xml version="1.0" encoding="utf-8"?>
<com.truelib.settings.custom.SwipeMenuOverlapLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:contentView="@id/container"
    app:rightView="@id/right"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="15.0dip"
            android:textColor="@color/color_content_1st"
            android:ellipsize="end"
            android:gravity="start|center"
            android:layout_gravity="start|center"
            android:id="@id/label"
            android:background="@android:color/transparent"
            android:paddingTop="20.0dip"
            android:paddingBottom="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Placeholder"
            android:lines="1"
            android:singleLine="true"
            android:layout_marginStart="20.0dip"
            android:layout_toStartOf="@id/action_arrange"
            android:layout_alignParentStart="true"
            android:paddingVertical="20.0dip" />
        <View
            android:id="@id/divider_line"
            android:background="@color/divider"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/label"
            android:layout_marginStart="20.0dip" />
        <TextView
            android:id="@id/action_arrange"
            android:padding="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/arrange_icon"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/txt_rename"
            android:background="#ff007aff"
            android:layout_width="70.0dip"
            android:layout_height="fill_parent"
            android:text="@string/rename" />
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/txt_delete"
            android:background="#ffff3b30"
            android:layout_width="70.0dip"
            android:layout_height="fill_parent"
            android:text="@string/delete" />
    </LinearLayout>
</com.truelib.settings.custom.SwipeMenuOverlapLayout>