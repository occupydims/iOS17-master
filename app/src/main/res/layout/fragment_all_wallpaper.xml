<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/wallpaper_list_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="17.0dip"
        android:textColor="@color/main_text"
        android:id="@id/list_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="@string/add_new_wallpaper"
        app:customFont="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@id/cardBackAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:elevation="2.0dip"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="40.0dip"
        app:layout_constraintBottom_toBottomOf="@id/list_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_label">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/bg_icon_back_glass"
            android:padding="8.0dip"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:foreground="@drawable/ripple_back"
            android:src="@drawable/ic_arrow_back_settings"
            android:importantForAccessibility="no" />
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/wallpaper_list"
        android:paddingLeft="8.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="8.0dip"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="8.0dip"
        android:paddingHorizontal="8.0dip"
        android:paddingVertical="8.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_label" />
</androidx.constraintlayout.widget.ConstraintLayout>