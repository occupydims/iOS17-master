<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:background="#80505050"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.common.TextViewCustomFont
        android:textSize="18.0dip"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@id/des"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginRight="24.0dip"
        android:layout_marginBottom="6.0dip"
        android:layout_marginHorizontal="24.0dip"
        android:layout_marginVertical="6.0dip" />
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/gray_background_radius_big"
        android:padding="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24.0dip"
        android:layout_marginRight="24.0dip"
        android:backgroundTint="#fff1f1f1"
        android:backgroundTintMode="add"
        android:layout_marginHorizontal="24.0dip">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="8.0dip"
            app:cardElevation="0.0dip">
            <ImageView
                android:id="@id/icon"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip" />
        </androidx.cardview.widget.CardView>
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="#ff000000"
            android:ellipsize="end"
            android:id="@id/app_name"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:layout_weight="1.0"
            android:paddingHorizontal="8.0dip"
            app:customFont="12" />
        <com.truelib.common.view.IOSSwitchView
            android:id="@id/switch_btn"
            android:layout_width="51.0dip"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>