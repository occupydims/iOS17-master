<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/Widget.Material3.AppBarLayout"
        android:id="@id/app_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/collection_app_bar_height">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@id/toolbar_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:collapsedTitleTextColor="@color/white"
            app:expandedTitleGravity="bottom|center"
            app:expandedTitleTextAppearance="@style/WallpaperTextTitle"
            app:expandedTitleTextColor="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
            <ImageView
                android:id="@id/thumb_image"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/collection_app_bar_height"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />
            <View
                android:id="@id/thumb_bg"
                android:background="@drawable/collection_thumb_overlay"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/collection_app_bar_height"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />
            <androidx.appcompat.widget.Toolbar
                android:id="@id/tool_bar"
                android:background="@color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginBottom="8.0dip"
                app:contentInsetStartWithNavigation="0.0dip"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/collection_back"
                app:titleTextColor="@color/white" />
            <View
                android:layout_gravity="bottom"
                android:id="@id/bg_main"
                android:background="@drawable/wallpapers_list_collection_bg"
                android:layout_width="fill_parent"
                android:layout_height="12.0dip"
                app:layout_collapseMode="pin" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/wallpaper_list"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label" />
    <androidx.core.widget.NestedScrollView
        android:id="@id/no_item_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <include
                android:layout_gravity="center"
                android:id="@id/progress_item"
                android:layout_width="@dimen/loading_thumb_size"
                android:layout_height="@dimen/loading_thumb_size"
                layout="@layout/theme_loading_layout" />
            <include
                android:id="@id/no_item_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_no_item_wallpaper" />
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>