<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@drawable/bottom_sheet_background"
    android:padding="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/max_option_dialog_width">
        <TextView
            android:textSize="20.0dip"
            android:textStyle="bold"
            android:textColor="@color/icon_pack_text"
            android:gravity="center"
            android:id="@id/title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/overwrite_existing_icon_pack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="15.0dip"
            android:textColor="@color/icon_pack_text"
            android:gravity="center"
            android:id="@id/description"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="@string/overwrite_pack_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />
        <androidx.viewpager2.widget.ViewPager2
            android:orientation="horizontal"
            android:id="@id/view_pager"
            android:clipToPadding="false"
            android:layout_width="0.0dip"
            android:layout_height="248.0dip"
            android:layout_marginTop="20.0dip"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" />
        <com.google.android.material.tabs.TabLayout
            android:id="@id/page_indicator"
            android:background="@color/transparent_bg"
            android:layout_width="0.0dip"
            android:layout_height="24.0dip"
            android:layout_marginTop="16.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_pager"
            app:tabBackground="@drawable/icon_pack_tab_selected_dot"
            app:tabGravity="center"
            app:tabIndicatorHeight="0.0dip" />
        <TextView
            android:textSize="13.0dip"
            android:textColor="@color/red_color"
            android:gravity="center"
            android:id="@id/warning"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="@string/warning_this_action_cannot_be_undone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/page_indicator" />
        <TextView
            android:textSize="17.0dip"
            android:textColor="@color/icon_pack_button_text"
            android:gravity="center"
            android:id="@id/overwrite"
            android:background="@drawable/icon_pack_button_bg"
            android:paddingTop="14.0dip"
            android:paddingBottom="14.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:text="@string/overwrite"
            android:paddingVertical="14.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/warning" />
        <TextView
            android:textSize="17.0dip"
            android:textColor="@color/icon_pack_button_color"
            android:gravity="center"
            android:id="@id/discard"
            android:paddingTop="14.0dip"
            android:paddingBottom="14.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:text="@string/discard"
            android:paddingVertical="14.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/overwrite" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>