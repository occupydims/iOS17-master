<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/optimize_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/dp12"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_margin="@dimen/activity_margin"
        app:layout_constraintBottom_toTopOf="@id/native_ad_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.android.launcher3.views.SafeScrollView
            android:scrollbars="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="4.0dip"
            android:layout_marginBottom="4.0dip"
            android:layout_marginVertical="4.0dip"
            app:layout_constraintBottom_toTopOf="@id/go_to_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:gravity="bottom|center"
                android:orientation="vertical"
                android:background="@drawable/bg_border_uninstall"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:src="@drawable/ic_warning"
                    app:tint="@color/orange_yellow" />
                <com.android.launcher3.settings.custom.TextViewCustomFont
                    android:textSize="16.0dip"
                    android:textColor="@color/pro_main_text"
                    android:id="@id/description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:text="@string/uninstall_app_warning_description"
                    android:includeFontPadding="false" />
            </LinearLayout>
        </com.android.launcher3.views.SafeScrollView>
        <com.truelib.common.TextViewCustomFont
            android:textSize="14.0dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/go_to_setting"
            android:background="@drawable/bg_ripple_button"
            android:padding="14.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_marginBottom="10.0dip"
            android:text="@string/change_default_launcher"
            android:includeFontPadding="false"
            app:customFont="2"
            app:layout_constraintBottom_toTopOf="@id/continue_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <com.truelib.common.TextViewCustomFont
            android:textSize="14.0dip"
            android:textColor="@color/blue_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/continue_btn"
            android:padding="14.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dip"
            android:text="@string/button_continue_uninstall"
            android:includeFontPadding="false"
            app:customFont="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@id/native_ad_frame"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>