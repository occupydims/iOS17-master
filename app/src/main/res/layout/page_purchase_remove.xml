<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.adapter.billing.ui.common.GradientBorderView
        android:orientation="horizontal"
        android:id="@id/buttonMonth"
        android:paddingLeft="20.0dip"
        android:paddingTop="16.0dip"
        android:paddingRight="20.0dip"
        android:paddingBottom="16.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:paddingHorizontal="20.0dip"
        android:paddingVertical="16.0dip"
        app:layout_constraintBottom_toTopOf="@id/buttonLifeTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="@color/color_title_purchase_remove"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/month"
                app:fontFamily="@font/sfpro_text_medium" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="12.0sp"
                android:textColor="@color/color_des_purchase_remove"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/auto_renews_monthly_cancel_any_time"
                app:fontFamily="@font/sfpro_regular" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="20.0sp"
            android:textColor="@color/color_price_remove_ads"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/txtMonthPrice"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            app:fontFamily="@font/sfpro_text_semi_bold" />
    </com.truelib.adapter.billing.ui.common.GradientBorderView>
    <com.truelib.adapter.billing.ui.common.GradientBorderView
        android:orientation="horizontal"
        android:id="@id/buttonLifeTime"
        android:paddingLeft="20.0dip"
        android:paddingTop="16.0dip"
        android:paddingRight="20.0dip"
        android:paddingBottom="16.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:paddingHorizontal="20.0dip"
        android:paddingVertical="16.0dip"
        app:layout_constraintBottom_toTopOf="@id/btn_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMonth">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="@color/color_title_purchase_remove"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/life_time"
                app:fontFamily="@font/sfpro_text_medium" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="12.0sp"
                android:textColor="@color/color_des_purchase_remove"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/one_time_payment_no_renewal"
                app:fontFamily="@font/sfpro_regular" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="20.0sp"
            android:textColor="@color/color_price_remove_ads"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/txtLifeTimePrice"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            app:fontFamily="@font/sfpro_text_semi_bold" />
    </com.truelib.adapter.billing.ui.common.GradientBorderView>
    <com.truelib.adapter.billing.ui.common.ColorfulBorderView
        android:gravity="center"
        android:id="@id/btn_continue"
        android:layout_width="0.0dip"
        android:layout_height="56.0dip"
        android:layout_marginTop="24.0dip"
        android:layout_marginBottom="24.0dip"
        android:elevation="2.0dip"
        android:layout_marginVertical="24.0dip"
        app:layout_constraintBottom_toTopOf="@id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonLifeTime">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_remove_ads"
            android:textAllCaps="true"
            android:fontFamily="@font/sfpro_text_semi_bold"
            app:drawableEndCompat="@drawable/ic_arrow_left_remove_ads"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.truelib.adapter.billing.ui.common.ColorfulBorderView>
    <LinearLayout
        android:gravity="center"
        android:id="@id/container"
        android:paddingBottom="@dimen/dp8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="12.0sp"
            android:textColor="#ff8b8b8b"
            android:id="@id/txtByContinuing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_continuing_you_agree_to_our"
            android:paddingEnd="@dimen/dp4"
            app:fontFamily="@font/sfpro_regular" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="12.0sp"
            android:textColor="#ff8b8b8b"
            android:id="@id/txtPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy_u"
            app:fontFamily="@font/sfpro_regular" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="12.0sp"
            android:textColor="#ff8b8b8b"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:paddingHorizontal="@dimen/dp12"
            app:fontFamily="@font/sfpro_regular" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="12.0sp"
            android:textColor="#ff8b8b8b"
            android:id="@id/txtRestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restore_u"
            app:fontFamily="@font/sfpro_regular" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>