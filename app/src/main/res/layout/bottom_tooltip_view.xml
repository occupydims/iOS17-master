<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher3.views.BottomPageTooltipView
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:background="#22000000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <View
            android:layout_gravity="bottom"
            android:id="@id/bottom_view"
            android:background="@drawable/bottom_tooltip_bg"
            android:layout_width="fill_parent"
            android:layout_height="408.0dip" />
        <View
            android:layout_gravity="end|bottom|center"
            android:id="@id/spotlight"
            android:background="@drawable/bottom_spotlight"
            android:layout_width="fill_parent"
            android:layout_height="408.0dip" />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="bottom|center"
            android:id="@id/handle_view"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/hand_anim" />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="bottom|center"
            android:id="@id/arrow_view"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/anim_arrow" />
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:id="@id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100.0dip"
            android:text="@string/swipe_up_from_bottom_to_chat_with_ai"
            android:shadowColor="#ff000000"
            android:shadowRadius="10.0"
            android:layout_marginStart="24.0dip"
            android:layout_marginEnd="24.0dip" />
    </FrameLayout>
</com.android.launcher3.views.BottomPageTooltipView>