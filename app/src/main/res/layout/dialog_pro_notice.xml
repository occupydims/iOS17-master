<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/bottom_sheet_background"
    android:paddingBottom="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/dialog_preview"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="20.0dip"
        android:src="@drawable/pro_notice_preview"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@id/dialog_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="@fraction/dialog_pro_notice_percent" />
    <TextView
        android:textSize="20.0dip"
        android:textStyle="bold"
        android:textColor="@color/icon_pack_text"
        android:gravity="center"
        android:id="@id/dialog_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36.0dip"
        android:layout_marginRight="36.0dip"
        android:layout_marginBottom="20.0dip"
        android:text="@string/upgrade_to_access_pro"
        android:layout_marginHorizontal="36.0dip"
        app:layout_constraintBottom_toTopOf="@id/prop_container"
        app:layout_constraintEnd_toEndOf="@id/dialog_preview"
        app:layout_constraintStart_toStartOf="@id/dialog_preview" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/prop_container"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36.0dip"
        android:layout_marginRight="36.0dip"
        android:layout_marginBottom="20.0dip"
        android:layout_marginHorizontal="36.0dip"
        app:layout_constraintBottom_toTopOf="@id/upgrade_button"
        app:layout_constraintEnd_toEndOf="@id/dialog_preview"
        app:layout_constraintStart_toStartOf="@id/dialog_preview" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/upgrade_button"
        android:background="@drawable/bg_unlock_all_themes"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        app:layout_constraintBottom_toTopOf="@id/remove_effects_button"
        app:layout_constraintEnd_toEndOf="@id/dialog_preview"
        app:layout_constraintStart_toStartOf="@id/dialog_preview">
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="13.0dip"
            android:paddingBottom="13.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unlock_all_icon"
            android:includeFontPadding="false"
            android:drawablePadding="8.0dip"
            android:drawableStart="@drawable/ic_coin"
            android:paddingVertical="13.0dip"
            app:customFont="2" />
    </LinearLayout>
    <TextView
        android:textSize="17.0dip"
        android:textColor="@color/icon_pack_button_color"
        android:gravity="center"
        android:id="@id/remove_effects_button"
        android:background="@drawable/rounded_button_bg"
        android:paddingTop="14.0dip"
        android:paddingBottom="14.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:text="@string/continue_without_these"
        android:paddingVertical="14.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dialog_preview"
        app:layout_constraintStart_toStartOf="@id/dialog_preview" />
</androidx.constraintlayout.widget.ConstraintLayout>