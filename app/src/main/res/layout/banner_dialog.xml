<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:paddingBottom="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16.0dip"
    android:layout_marginRight="16.0dip"
    android:layout_marginHorizontal="16.0dip"
    app:cardBackgroundColor="#ffffffff"
    app:cardCornerRadius="16.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.truelib.cross.views.CustomTextView
            android:textSize="18.0dip"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:gravity="start|center"
            android:id="@id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16.0dip"
            android:layout_marginBottom="10.0dip"
            android:text="@string/dialog_description"
            android:maxLines="1"
            android:drawablePadding="10.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.truelib.cross.views.CustomTextView
            android:textSize="14.0dip"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:gravity="start|center"
            android:id="@id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginBottom="8.0dip"
            android:text="@string/dialog_description"
            android:maxLines="1"
            android:drawablePadding="10.0dip"
            android:layout_marginHorizontal="16.0dip"
            android:layout_marginVertical="8.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />
        <androidx.cardview.widget.CardView
            android:id="@id/bannerContainer"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_margin="16.0dip"
            app:cardCornerRadius="10.0dip"
            app:cardElevation="0.0dip"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintTop_toBottomOf="@id/description">
            <ImageView
                android:id="@id/bannerImage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerInside" />
        </androidx.cardview.widget.CardView>
        <com.truelib.cross.views.CustomTextView
            android:textSize="18.0sp"
            android:textColor="@color/blue_color"
            android:gravity="center"
            android:id="@id/continue_button"
            android:background="@drawable/bg_item_main"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16.0dip"
            android:minWidth="70.0dip"
            android:text="@string/download"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bannerContainer" />
        <com.truelib.cross.views.CustomTextView
            android:textSize="18.0sp"
            android:textColor="@color/blue_color"
            android:id="@id/cancel_button"
            android:background="@drawable/bg_item_main"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:layout_marginEnd="5.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/continue_button"
            app:layout_constraintTop_toBottomOf="@id/bannerContainer" />
        <TextView
            android:background="@drawable/bg_item_continue"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16.0dip"
            android:text="Ad"
            android:paddingHorizontal="4.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>