<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="24.0sp"
        android:textStyle="bold"
        android:textColor="@color/pro_main_text"
        android:gravity="center"
        android:id="@id/txt_title"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="App local config" />
    <RelativeLayout
        android:id="@id/use_local_config"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title">
        <TextView
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:textColor="@color/pro_main_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Use local config"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16.0dip"
            android:layout_toStartOf="@id/switch_dev_option" />
        <Switch
            android:id="@id/switch_dev_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <View
        android:background="@color/divider_color"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@id/use_local_config" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/rcv_config_item"
        android:paddingBottom="100.0dip"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/use_local_config" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@id/fab_add_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24.0dip"
        android:src="@drawable/ic_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>