<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/start_page_image_background"
        android:background="@color/start_custom_background"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toTopOf="@id/page_label"
        app:layout_constraintTop_toTopOf="parent" />
    <FrameLayout
        android:id="@id/icon_preview_container"
        android:background="@drawable/gray_background_radius_big"
        android:padding="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip"
        app:layout_constraintBottom_toTopOf="@id/setting_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:id="@id/icon_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message_icon" />
        <TextView
            android:textColor="@color/white"
            android:layout_gravity="bottom|center"
            android:id="@id/text_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message" />
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/setting_item"
        android:background="@drawable/white_background_radius_medium"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="16.0dip"
        android:layout_marginHorizontal="20.0dip"
        app:layout_constraintBottom_toBottomOf="@id/start_page_image_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="450.0dip">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:paddingTop="11.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="11.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16.0dip"
            android:paddingVertical="11.0dip">
            <TextView
                android:textSize="14.199982dip"
                android:textColor="#ff000000"
                android:ellipsize="end"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/flexible_text_size"
                android:maxLines="1"
                android:layout_weight="1.0"
                android:layout_marginEnd="8.0dip" />
            <com.truelib.common.view.IOSSwitchView
                android:id="@id/switch_flexible"
                android:layout_width="51.0dip"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:paddingTop="11.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="11.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="3.0"
            android:paddingHorizontal="16.0dip"
            android:paddingVertical="11.0dip">
            <TextView
                android:textSize="14.199982dip"
                android:textColor="#ff000000"
                android:ellipsize="end"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/icon_size"
                android:maxLines="1"
                android:layout_weight="1.0"
                android:layout_marginEnd="8.0dip" />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@id/icon_seekbar"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="20"
                android:progressDrawable="@drawable/seekbar_track"
                android:thumb="@drawable/seekbar_thumb"
                android:layout_weight="2.0" />
        </LinearLayout>
    </LinearLayout>
    <com.truelib.common.TextViewCustomFont
        android:textSize="@dimen/text_size_title_start_page"
        android:textColor="#ff000000"
        android:ellipsize="end"
        android:gravity="start|center"
        android:id="@id/page_label"
        android:paddingTop="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:maxLines="1"
        android:layout_marginHorizontal="16.0dip"
        app:customFont="2"
        app:layout_constraintBottom_toTopOf="@id/page_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="@dimen/text_size_des_start_page"
        android:textColor="@color/color_des_item_start_page"
        android:ellipsize="end"
        android:gravity="start|center"
        android:id="@id/page_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:maxLines="2"
        android:layout_marginHorizontal="16.0dip"
        app:customFont="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>