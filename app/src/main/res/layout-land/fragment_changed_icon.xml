<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/new_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@id/tool_bar"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/layout_tool_bar_icon_pack" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/bg_list_app"
        android:background="@drawable/new_background_item_group_setting"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="24.0dip"
        android:layout_marginHorizontal="16.0dip"
        app:cardCornerRadius="@dimen/margin_16dp"
        app:layout_constraintEnd_toStartOf="@id/native_ad_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_goneMarginBottom="16.0dip">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/image_app"
            android:layout_width="64.0dip"
            android:layout_height="64.0dip"
            android:layout_margin="16.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="17.0dip"
            android:textStyle="bold"
            android:textColor="@color/color_content_1st"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@id/name_app"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginRight="10.0dip"
            android:text="@string/app_name"
            android:maxLines="1"
            android:elevation="2.0dip"
            android:layout_marginHorizontal="10.0dip"
            app:customFont="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_app"
            app:layout_constraintVertical_chainStyle="packed" />
        <View
            android:id="@id/divider"
            android:background="@color/new_color_divider"
            android:layout_width="0.0dip"
            android:layout_height="1.0dip"
            android:layout_marginTop="16.0dip"
            android:elevation="2.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_app" />
        <com.truelib.settings.custom.TextCustomFont
            android:textSize="14.0dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/btn_choose_gallery"
            android:background="@drawable/background_btn_choose_gallery"
            android:paddingLeft="8.0dip"
            android:paddingTop="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="8.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="16.0dip"
            android:text="@string/choose_from_gallery"
            android:paddingHorizontal="8.0dip"
            android:paddingVertical="8.0dip"
            app:customFont="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.truelib.settings.custom.TextCustomFont
        android:textColor="@color/blue_color"
        android:gravity="center_vertical"
        android:id="@id/reset_icon_default"
        android:background="@drawable/new_background_item_group_setting"
        android:paddingTop="12.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="32.0dip"
        android:text="@string/reset_icon_to_default"
        android:paddingStart="16.0dip"
        android:paddingVertical="12.0dip"
        app:layout_constraintEnd_toEndOf="@id/bg_list_app"
        app:layout_constraintStart_toStartOf="@id/bg_list_app"
        app:layout_constraintTop_toBottomOf="@id/bg_list_app" />
    <FrameLayout
        android:id="@id/native_ad_frame"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingRight="@dimen/medium_margin"
        android:paddingBottom="@dimen/margin_8dp"
        android:clipToPadding="false"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/medium_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>