<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="12.0dip"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@id/button_done"
        android:background="@drawable/bg_border_dialog"
        android:paddingLeft="8.0dip"
        android:paddingTop="4.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:minWidth="60.0dip"
        android:text="@string/save"
        android:layout_marginEnd="32.0dip"
        android:paddingHorizontal="8.0dip"
        android:paddingVertical="4.0dip"
        app:customFont="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_marginTop="32.0dip"
        android:layout_marginBottom="32.0dip"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="36.0dip"
        app:layout_constraintBottom_toTopOf="@id/pair_button"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_done">
        <ImageView
            android:id="@id/wallpaper_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/wallpaper_default_one"
            android:scaleType="centerCrop"
            android:contentDescription="@string/current_wallpaper" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/wallpaper_preview" />
        <ImageView
            android:background="@drawable/home_background_wallpaper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/background_color" />
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@id/pair_button"
        android:layout_width="@dimen/home_setting_option_size"
        android:layout_height="@dimen/home_setting_option_size"
        android:layout_marginBottom="4.0dip"
        android:contentDescription="@string/pair"
        android:layout_marginEnd="8.0dip"
        app:layout_constraintBottom_toTopOf="@id/pair_text"
        app:layout_constraintEnd_toStartOf="@id/color_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@id/color_button"
        android:layout_width="@dimen/home_setting_option_size"
        android:layout_height="@dimen/home_setting_option_size"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:contentDescription="@string/color"
        android:layout_marginHorizontal="8.0dip"
        app:layout_constraintBottom_toBottomOf="@id/pair_button"
        app:layout_constraintEnd_toStartOf="@id/gradient_button"
        app:layout_constraintStart_toEndOf="@id/pair_button"
        app:layout_constraintTop_toTopOf="@id/pair_button" />
    <ImageView
        android:id="@id/color_add_button"
        android:visibility="gone"
        android:layout_width="15.0dip"
        android:layout_height="15.0dip"
        android:src="@drawable/add_wallpaper"
        android:contentDescription="@string/add"
        app:layout_constraintBottom_toBottomOf="@id/color_button"
        app:layout_constraintEnd_toEndOf="@id/color_button"
        app:layout_constraintStart_toStartOf="@id/color_button"
        app:layout_constraintTop_toTopOf="@id/color_button" />
    <ImageView
        android:id="@id/gradient_button"
        android:layout_width="@dimen/home_setting_option_size"
        android:layout_height="@dimen/home_setting_option_size"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:contentDescription="@string/gradient"
        android:layout_marginHorizontal="8.0dip"
        app:layout_constraintBottom_toBottomOf="@id/pair_button"
        app:layout_constraintEnd_toStartOf="@id/photo_button"
        app:layout_constraintStart_toEndOf="@id/color_button"
        app:layout_constraintTop_toTopOf="@id/pair_button" />
    <ImageView
        android:id="@id/gradient_add_button"
        android:visibility="gone"
        android:layout_width="15.0dip"
        android:layout_height="15.0dip"
        android:src="@drawable/add_wallpaper"
        android:contentDescription="@string/add"
        app:layout_constraintBottom_toBottomOf="@id/gradient_button"
        app:layout_constraintEnd_toEndOf="@id/gradient_button"
        app:layout_constraintStart_toStartOf="@id/gradient_button"
        app:layout_constraintTop_toTopOf="@id/gradient_button" />
    <ImageView
        android:id="@id/photo_button"
        android:layout_width="@dimen/home_setting_option_size"
        android:layout_height="@dimen/home_setting_option_size"
        android:src="@drawable/photo_button"
        android:contentDescription="@string/photo"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="10.0dip"
        app:layout_constraintBottom_toBottomOf="@id/pair_button"
        app:layout_constraintEnd_toStartOf="@id/divider_line"
        app:layout_constraintStart_toEndOf="@id/gradient_button"
        app:layout_constraintTop_toTopOf="@id/pair_button" />
    <ImageView
        android:id="@id/photo_add_button"
        android:visibility="gone"
        android:layout_width="15.0dip"
        android:layout_height="15.0dip"
        android:src="@drawable/add_wallpaper"
        android:contentDescription="@string/add"
        app:layout_constraintBottom_toBottomOf="@id/photo_button"
        app:layout_constraintEnd_toEndOf="@id/photo_button"
        app:layout_constraintStart_toStartOf="@id/photo_button"
        app:layout_constraintTop_toTopOf="@id/photo_button" />
    <View
        android:id="@id/divider_line"
        android:background="#ffaeaeb2"
        android:layout_width="2.0dip"
        android:layout_height="@dimen/home_setting_option_size"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginHorizontal="10.0dip"
        app:layout_constraintBottom_toBottomOf="@id/pair_button"
        app:layout_constraintEnd_toStartOf="@id/blur_button"
        app:layout_constraintStart_toEndOf="@id/photo_button"
        app:layout_constraintTop_toTopOf="@id/pair_button" />
    <ImageView
        android:id="@id/blur_button"
        android:layout_width="@dimen/home_setting_option_size"
        android:layout_height="@dimen/home_setting_option_size"
        android:src="@drawable/blur_button"
        android:contentDescription="@string/blur"
        android:layout_marginStart="10.0dip"
        app:layout_constraintBottom_toBottomOf="@id/pair_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider_line"
        app:layout_constraintTop_toTopOf="@id/pair_button" />
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="10.0dip"
        android:textColor="@color/white"
        android:id="@id/pair_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:text="@string/pair"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/pair_button"
        app:layout_constraintStart_toStartOf="@id/pair_button" />
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="10.0dip"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color"
        app:layout_constraintBottom_toBottomOf="@id/pair_text"
        app:layout_constraintEnd_toEndOf="@id/color_button"
        app:layout_constraintStart_toStartOf="@id/color_button"
        app:layout_constraintTop_toTopOf="@id/pair_text" />
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="10.0dip"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gradient"
        app:layout_constraintBottom_toBottomOf="@id/pair_text"
        app:layout_constraintEnd_toEndOf="@id/gradient_button"
        app:layout_constraintStart_toStartOf="@id/gradient_button"
        app:layout_constraintTop_toTopOf="@id/pair_text" />
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="10.0dip"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo"
        app:layout_constraintBottom_toBottomOf="@id/pair_text"
        app:layout_constraintEnd_toEndOf="@id/photo_button"
        app:layout_constraintStart_toStartOf="@id/photo_button"
        app:layout_constraintTop_toTopOf="@id/pair_text" />
    <com.truelib.settings.custom.TextCustomFont
        android:textSize="10.0dip"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blur"
        app:layout_constraintBottom_toBottomOf="@id/pair_text"
        app:layout_constraintEnd_toEndOf="@id/blur_button"
        app:layout_constraintStart_toStartOf="@id/blur_button"
        app:layout_constraintTop_toTopOf="@id/pair_text" />
    <com.truelib.settings.common.LoadingView
        android:id="@id/loading_view"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:translationZ="2.0dip" />
</androidx.constraintlayout.widget.ConstraintLayout>