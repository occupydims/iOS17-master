<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/start_page_image_background"
        android:background="@color/start_custom_background"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="18.0dip"
        android:textColor="#ff000000"
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="@string/select_wallpaper"
        android:layout_marginStart="16.0dip"
        app:customFont="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.common.TextViewCustomFont
        android:textColor="@color/white"
        android:id="@id/btn_skip"
        android:background="@drawable/gray_background_radius_big"
        android:paddingLeft="12.0dip"
        android:paddingTop="4.0dip"
        android:paddingRight="12.0dip"
        android:paddingBottom="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:layout_marginEnd="16.0dip"
        android:paddingHorizontal="12.0dip"
        android:paddingVertical="4.0dip"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title" />
    <FrameLayout
        android:id="@id/image_container"
        android:background="@drawable/gray_background_radius_big"
        android:padding="4.0dip"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        app:layout_constraintBottom_toTopOf="@id/list_wallpaper"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_skip">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="12.0dip"
            app:cardElevation="0.0dip">
            <com.truelib.onboarding.startpage.StartPageWallpaperBackgroundImageView
                android:id="@id/img_background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/list_wallpaper"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginHorizontal="20.0dip"
        app:layout_constraintBottom_toBottomOf="@id/start_page_image_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="450.0dip">
        <FrameLayout
            android:id="@id/wallpaper_1"
            android:padding="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_weight="1.0"
            android:layout_marginHorizontal="8.0dip">
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#cc818181"
                app:cardCornerRadius="8.879974dip"
                app:cardElevation="0.0dip">
                <com.truelib.onboarding.startpage.StartPageWallpaperItemImageView
                    android:id="@id/img_wallpaper_1"
                    android:layout_width="fill_parent"
                    android:layout_height="60.0dip"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <FrameLayout
            android:id="@id/wallpaper_2"
            android:padding="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_weight="1.0"
            android:layout_marginHorizontal="8.0dip">
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#cc818181"
                app:cardCornerRadius="8.0dip"
                app:cardElevation="0.0dip">
                <com.truelib.onboarding.startpage.StartPageWallpaperItemImageView
                    android:id="@id/img_wallpaper_2"
                    android:layout_width="fill_parent"
                    android:layout_height="60.0dip"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <FrameLayout
            android:id="@id/wallpaper_3"
            android:padding="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_weight="1.0"
            android:layout_marginHorizontal="8.0dip">
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#cc818181"
                app:cardCornerRadius="8.0dip"
                app:cardElevation="0.0dip">
                <com.truelib.onboarding.startpage.StartPageWallpaperItemImageView
                    android:id="@id/img_wallpaper_3"
                    android:layout_width="fill_parent"
                    android:layout_height="60.0dip"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <FrameLayout
            android:id="@id/wallpaper_4"
            android:padding="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_weight="1.0"
            android:layout_marginHorizontal="8.0dip">
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#cc818181"
                app:cardCornerRadius="8.0dip"
                app:cardElevation="0.0dip">
                <com.truelib.onboarding.startpage.StartPageWallpaperItemImageView
                    android:id="@id/img_wallpaper_4"
                    android:layout_width="fill_parent"
                    android:layout_height="60.0dip"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>