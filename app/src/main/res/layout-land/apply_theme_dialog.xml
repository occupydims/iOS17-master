<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/bg_apply_theme"
    android:paddingLeft="16.0dip"
    android:paddingTop="20.0dip"
    android:paddingRight="16.0dip"
    android:paddingBottom="20.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16.0dip"
    android:paddingHorizontal="16.0dip"
    android:paddingVertical="20.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/img_dialog"
        android:layout_width="@dimen/success_icon_size"
        android:layout_height="@dimen/success_icon_size"
        android:src="@drawable/ic_apply_theme"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="18.0dip"
        android:textColor="@color/theme_text_primary"
        android:gravity="start"
        android:id="@id/title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/free_apply_theme"
        android:layout_marginStart="16.0dip"
        app:customFont="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_dialog"
        app:layout_constraintTop_toTopOf="@id/img_dialog" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="16.0dip"
        android:textColor="@color/theme_text_secondary"
        android:gravity="start"
        android:id="@id/content_apply"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:text="@string/content_free_apply_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/free_with_ad"
        android:background="@drawable/bg_btn_action"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/content_apply"
        app:layout_constraintTop_toBottomOf="@id/content_apply">
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/tv_apply"
            android:paddingTop="13.0dip"
            android:paddingBottom="13.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/free_with_ad"
            android:includeFontPadding="false"
            android:drawablePadding="8.0dip"
            android:drawableStart="@drawable/ic_watch_ad"
            android:paddingVertical="13.0dip"
            app:customFont="2" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/unlock_all"
        android:background="@drawable/bg_unlock_all_themes"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/free_with_ad"
        app:layout_constraintTop_toBottomOf="@id/free_with_ad">
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/unlock_all_text"
            android:paddingTop="13.0dip"
            android:paddingBottom="13.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unlock_all_themes"
            android:includeFontPadding="false"
            android:drawablePadding="8.0dip"
            android:drawableStart="@drawable/ic_coin"
            android:paddingVertical="13.0dip"
            app:customFont="2" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>