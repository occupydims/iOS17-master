<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@id/preview_lock"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_marginEnd="4.0dip"
        app:cardCornerRadius="16.0dip"
        app:cardElevation="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="6:10"
        app:layout_constraintEnd_toStartOf="@id/preview_home"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="@dimen/wallpaper_preview_width_ratio">
        <ImageView
            android:id="@id/bg_lock"
            android:background="@color/colorPrimary"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@id/imageLock"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_lock_preview" />
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="12.0dip"
            android:textColor="#ffffffff"
            android:layout_gravity="bottom|center"
            android:id="@id/custom_lock"
            android:background="@drawable/set_new_wallpaper_bg"
            android:paddingLeft="16.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="3.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip"
            android:text="@string/customize"
            android:backgroundTint="#4dffffff"
            android:paddingHorizontal="16.0dip"
            android:paddingVertical="3.0dip" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@id/preview_home"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_marginStart="4.0dip"
        app:cardCornerRadius="16.0dip"
        app:cardElevation="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="6:10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/preview_lock"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="@dimen/wallpaper_preview_width_ratio">
        <ImageView
            android:id="@id/bg_home"
            android:background="@color/colorPrimary"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@id/imageHome"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/wallpaper_preview_icons" />
        <com.android.launcher3.settings.custom.TextViewCustomFont
            android:textSize="12.0dip"
            android:textColor="#ffffffff"
            android:layout_gravity="bottom|center"
            android:id="@id/custom_home"
            android:background="@drawable/set_new_wallpaper_bg"
            android:paddingLeft="16.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="3.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip"
            android:text="@string/customize"
            android:backgroundTint="#4dffffff"
            android:paddingHorizontal="16.0dip"
            android:paddingVertical="3.0dip" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>