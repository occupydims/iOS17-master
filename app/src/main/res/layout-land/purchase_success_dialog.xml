<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:gravity="center"
    android:background="@drawable/bg_apply_theme"
    android:paddingLeft="16.0dip"
    android:paddingTop="20.0dip"
    android:paddingRight="16.0dip"
    android:paddingBottom="20.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16.0dip"
    android:paddingHorizontal="16.0dip"
    android:paddingVertical="20.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/success_img"
        android:layout_width="@dimen/success_icon_size"
        android:layout_height="@dimen/success_icon_size"
        android:src="@drawable/img_coin_purchase_success"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="18.0dip"
        android:textColor="@color/theme_text_primary"
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coin_congratulation"
        android:layout_marginStart="16.0dip"
        app:customFont="2"
        app:layout_constraintStart_toEndOf="@id/success_img"
        app:layout_constraintTop_toTopOf="parent" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="28.5dip"
        android:textColor="@color/theme_color_orange"
        android:id="@id/earned_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginStart="16.0dip"
        app:customFont="2"
        app:layout_constraintStart_toEndOf="@id/success_img"
        app:layout_constraintTop_toBottomOf="@id/title" />
    <com.truelib.common.TextViewCustomFont
        android:textSize="16.0dip"
        android:textColor="@color/theme_text_secondary"
        android:id="@id/content_earned"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:text="@string/discover_themes"
        android:layout_marginStart="16.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/success_img"
        app:layout_constraintTop_toBottomOf="@id/earned_coin" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/btn_ok"
        android:background="@drawable/bg_btn_action"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_earned">
        <com.truelib.common.TextViewCustomFont
            android:textSize="16.0dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/action_ok"
            android:paddingTop="13.0dip"
            android:paddingBottom="13.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:includeFontPadding="false"
            android:drawablePadding="8.0dip"
            android:paddingVertical="13.0dip"
            app:customFont="2" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>