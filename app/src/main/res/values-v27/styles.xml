<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppPermissionTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    <style name="BaseLauncherThemeWithCustomAttrs" parent="@style/BaseLauncherTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="allAppsInterimScrimAlpha">46</item>
        <item name="allAppsNavBarScrimColor">#66ffffff</item>
        <item name="allAppsScrimColor">#eaffffff</item>
        <item name="isMainColorDark">false</item>
        <item name="isWorkspaceDarkText">false</item>
        <item name="popupColorPrimary">#ffffffff</item>
        <item name="popupColorSecondary">#fff5f5f5</item>
        <item name="popupColorTertiary">#ffe0e0e0</item>
        <item name="widgetsTheme">@style/WidgetContainerTheme</item>
        <item name="workspaceAmbientShadowColor">#33000000</item>
        <item name="workspaceKeyShadowColor">#44000000</item>
        <item name="workspaceShadowColor">#b0000000</item>
        <item name="workspaceStatusBarScrim">@drawable/workspace_bg</item>
        <item name="workspaceTextColor">@android:color/white</item>
    </style>
    <style name="Theme.AIPage" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/appearance_bg_color</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/appearance_bg_color</item>
        <item name="android:navigationBarColor">@color/appearance_bg_color</item>
        <item name="android:windowLightStatusBar">@bool/is_light_status_bar</item>
        <item name="android:windowLightNavigationBar">@bool/is_light_status_bar</item>
    </style>
    <style name="Theme.Clock" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/clock_bg_color</item>
        <item name="android:statusBarColor">@color/clock_bg_color</item>
        <item name="android:navigationBarColor">@color/clock_bg_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    <style name="Theme.RemoveAds" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/color_bg_remove</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/color_bg_remove</item>
        <item name="android:windowLightStatusBar">@bool/is_light_status_bar</item>
        <item name="android:windowLightNavigationBar">@bool/is_light_status_bar</item>
    </style>
    <style name="Theme.Subscription" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/subscription_bg_color</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/subscription_bg_color</item>
        <item name="android:windowLightStatusBar">@bool/is_light_status_bar</item>
        <item name="android:windowLightNavigationBar">@bool/is_light_status_bar</item>
    </style>
    <style name="Theme.ThemePack" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/icon_pack_bg_color</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/icon_pack_bg_color</item>
        <item name="android:navigationBarColor">@color/icon_pack_bg_color</item>
        <item name="android:windowLightStatusBar">@bool/is_light_status_bar</item>
        <item name="android:windowLightNavigationBar">@bool/is_light_status_bar</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    <style name="Theme.WallpaperPreview" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/appearance_bg_color</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/appearance_bg_color</item>
        <item name="android:navigationBarColor">@color/appearance_bg_color</item>
        <item name="android:windowLightStatusBar">@bool/is_light_status_bar</item>
        <item name="android:windowLightNavigationBar">@bool/is_light_status_bar</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    <style name="WallpaperTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_wallpaper</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/background_wallpaper</item>
        <item name="android:navigationBarColor">@color/background_wallpaper</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>
