        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/bottom_sheet_item_bg_color" />
            <corners
                android:bottomLeftRadius="10.0dip"
                android:bottomRightRadius="10.0dip" />
        </shape>
