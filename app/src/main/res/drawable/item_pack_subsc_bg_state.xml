<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <corners
                        android:radius="12.0dip" />
                    <gradient
                        android:startColor="#ffc373ff"
                        android:endColor="#ff3aaeff"
                        android:angle="0.0"
                        android:centerColor="#ff6867ff" />
                </shape>
            </item>
            <item
                android:left="2.0dip"
                android:top="2.0dip"
                android:right="2.0dip"
                android:bottom="2.0dip">
                <shape
                    android:shape="rectangle">
                    <corners
                        android:radius="11.0dip" />
                    <solid
                        android:color="@color/item_pack_bg_color" />
                </shape>
            </item>
            <item
                android:left="2.0dip"
                android:top="2.0dip"
                android:right="2.0dip"
                android:bottom="2.0dip">
                <shape
                    android:shape="rectangle">
                    <corners
                        android:radius="11.0dip" />
                    <gradient
                        android:startColor="#33c373ff"
                        android:endColor="#333aaeff"
                        android:angle="0.0"
                        android:centerColor="#336867ff" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <corners
                android:radius="12.0dip" />
            <stroke
                android:width="1.0dip"
                android:color="@color/subsc_sub_text_color" />
        </shape>
    </item>
</selector>