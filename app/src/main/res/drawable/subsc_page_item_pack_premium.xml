<?xml version="1.0" encoding="utf-8"?>
<ripple
    android:color="@color/subsc_ripple_color"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#ffc373ff"
                android:endColor="#ff3aaeff"
                android:angle="0.0"
                android:type="linear"
                android:centerColor="#ff6867ff" />
            <corners
                android:radius="16.0dip" />
        </shape>
    </item>
    <item
        android:left="4.0dip"
        android:top="4.0dip"
        android:right="4.0dip"
        android:bottom="4.0dip">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/item_pack_bg_color" />
            <corners
                android:radius="12.0dip" />
        </shape>
    </item>
</ripple>