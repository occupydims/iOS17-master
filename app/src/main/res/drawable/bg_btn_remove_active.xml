<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/size_100" />
            <gradient
                android:startColor="#ffff2600"
                android:endColor="#ffff8228"
                android:angle="0.0"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:left="2.0dip"
        android:top="2.0dip"
        android:right="2.0dip"
        android:bottom="2.0dip">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/size_100" />
            <gradient
                android:startColor="#1aff2600"
                android:endColor="#1aff8228"
                android:angle="0.0" />
        </shape>
    </item>
</layer-list>