<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <solid
                android:color="@color/custom_progress_bg_color" />
            <corners
                android:radius="8.0dip" />
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid
                    android:color="@color/custom_progress_bg_color" />
                <corners
                    android:radius="8.0dip" />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#80007aff"
                    android:endColor="#804ec7ff"
                    android:angle="0.0" />
                <corners
                    android:radius="8.0dip" />
            </shape>
        </clip>
    </item>
</layer-list>